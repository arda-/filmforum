---
interface Props {
  weekStartsMonday?: boolean;
}

const { weekStartsMonday = true } = Astro.props;
---

<div class="calendar">
  <!-- Spacers for Monday-start (6 empty cells before Feb 1 Sunday) -->
  <div class="day empty spacer-mon"></div>
  <div class="day empty spacer-mon"></div>
  <div class="day empty spacer-mon"></div>
  <div class="day empty spacer-mon"></div>
  <div class="day empty spacer-mon"></div>
  <div class="day empty spacer-mon"></div>

  <slot />
</div>

<style>
  .calendar {
    display: grid;
    grid-template-columns: repeat(7, 1fr);
    gap: 1px;
    background: var(--bg-grid);
    max-width: 1400px;
    margin: 0 auto;
  }

  /* Natural width mode - calendar wider than viewport, requires scroll */
  :global(body.natural-width) .calendar {
    width: 150%;
    max-width: none;
  }

  @media (min-width: 480px) {
    :global(body.natural-width) .calendar {
      width: 125%;
    }
  }

  @media (min-width: 640px) {
    :global(body.natural-width) .calendar {
      width: auto;
      max-width: 1400px;
    }
  }

  .day.empty {
    background: transparent;
    min-height: 120px;
  }

  /* Hide spacer cells based on mode */
  :global(body.sunday-start) .spacer-mon { display: none; }
  :global(body.monday-start) .spacer-sun { display: none; }
</style>
