---
interface Props {
  id: string;
  class?: string;
}

const { id, class: className } = Astro.props;
const hasHeader = Astro.slots.has('header');
---

<div id={id} class:list={['modal-wrapper', className]} data-show="">
  <div class="modal-overlay"></div>
  <div class="modal-content">
    <button class="modal-close" data-id="close" aria-label="Close">&times;</button>
    {hasHeader && (
      <div class="modal-header">
        <slot name="header" />
      </div>
    )}
    <slot />
  </div>
</div>

<style is:global>
  .modal-wrapper {
    display: none;
    position: fixed;
    inset: 0;
    z-index: 1000;
    align-items: center;
    justify-content: center;
  }

  .modal-wrapper[data-show="true"] {
    display: flex;
  }

  .modal-wrapper .modal-overlay {
    position: absolute;
    inset: 0;
    background: rgba(0, 0, 0, 0.6);
    backdrop-filter: blur(4px);
  }

  .modal-wrapper .modal-content {
    position: relative;
    background: var(--bg-day);
    border-radius: 12px;
    max-width: 500px;
    width: calc(100% - 32px);
    max-height: 90vh;
    overflow-y: auto;
    overscroll-behavior: contain;
    padding: 24px;
    box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
  }

  .modal-wrapper .modal-close {
    position: absolute;
    top: 12px;
    right: 12px;
    width: 32px;
    height: 32px;
    border: none;
    background: transparent;
    color: var(--text-tertiary);
    border-radius: 6px;
    font-size: 24px;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: color 0.15s ease;
    z-index: 10;
  }

  .modal-wrapper .modal-close:hover {
    color: var(--text-primary);
  }

  .modal-wrapper .modal-header {
    margin-bottom: 16px;
  }

  .modal-wrapper .modal-header h2 {
    margin: 0 0 8px 0;
    font-size: 18px;
    color: var(--text-primary);
  }

  .modal-wrapper .modal-header p {
    margin: 0;
    font-size: 13px;
    color: var(--text-tertiary);
  }
</style>
