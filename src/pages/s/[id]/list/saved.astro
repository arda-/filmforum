---
/**
 * Cart page showing YOUR saved movies from localStorage.
 * Fully editable - you can change or remove reactions.
 * Includes share dialog and floating action buttons.
 */
import Layout from '@layouts/Layout.astro';
import Drawer from '@components/Drawer.astro';
import MovieDetailDrawer from '@components/session/MovieDetailDrawer.astro';
import type { Movie } from '@utils/movieUtils';
import { toTitleCase, formatRuntime } from '@utils/movieUtils';
import { getAllSeriesIds, getSeriesConfig } from '@config/series';
import {
  deduplicateMovies,
  sortMovies,
} from '@utils/sessionUtils';

export function getStaticPaths() {
  return getAllSeriesIds().map(id => ({ params: { id } }));
}

const { id } = Astro.params;
const config = getSeriesConfig(id!);
if (!config) return Astro.redirect('/');

// Load movie data at build time
let allMovies: Movie[] = [];
try {
  const fs = await import('node:fs');
  const path = await import('node:path');
  const dataPath = path.join(process.cwd(), 'public', config.dataFile);
  const data = fs.readFileSync(dataPath, 'utf-8');
  allMovies = JSON.parse(data);
} catch (e) {
  console.warn(`[${id}] Failed to load movie data:`, e instanceof Error ? e.message : e);
  allMovies = [];
}

const uniqueMovies = sortMovies(deduplicateMovies(allMovies), 'alpha');
const movieDataJson = JSON.stringify(uniqueMovies);
---

<Layout title={`Your Saved Movies — ${config.name}`}>
  <div class="cart-page" data-session-id={id}>
    <header class="page-header">
      <a href={`/s/${id}/list`} class="back-link">
        <svg width="16" height="16" viewBox="0 0 16 16" fill="none">
          <path d="M10 3L5 8l5 5" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
        Back to full list
      </a>
      <h1 class="page-title">Your Saved Movies</h1>
    </header>

    <div class="cart-sections" id="cart-sections">
      <div class="cart-section" id="cart-yes-section">
        <h2 class="section-title section-title--yes">
          Yes
          <span class="section-count" id="cart-yes-count">0</span>
        </h2>
        <div class="section-items" id="cart-yes-items"></div>
      </div>

      <div class="cart-section" id="cart-maybe-section">
        <h2 class="section-title section-title--maybe">
          Maybe
          <span class="section-count" id="cart-maybe-count">0</span>
        </h2>
        <div class="section-items" id="cart-maybe-items"></div>
      </div>

      <div class="cart-section" id="cart-no-section">
        <h2 class="section-title section-title--no">
          No
          <span class="section-count" id="cart-no-count">0</span>
        </h2>
        <div class="section-items" id="cart-no-items"></div>
      </div>

      <div class="cart-section" id="cart-unmarked-section">
        <h2 class="section-title section-title--unmarked">
          Unmarked
          <span class="section-count" id="cart-unmarked-count">0</span>
        </h2>
        <div class="section-items" id="cart-unmarked-items"></div>
      </div>

      <div class="cart-empty" id="cart-empty">
        <div class="empty-icon">
          <svg width="40" height="40" viewBox="0 0 40 40" fill="none">
            <path d="M10 6a4 4 0 00-4 4v24l14-8 14 8V10a4 4 0 00-4-4H10z" stroke="currentColor" stroke-width="2" fill="none"/>
          </svg>
        </div>
        <p class="empty-title">No movies saved yet</p>
        <p class="empty-hint">Tap Yes, Maybe, or No on any movie to start building your list</p>
      </div>
    </div>

    <!-- Spacer for floating buttons -->
    <div class="bottom-spacer"></div>

    <!-- Floating action buttons -->
    <div class="floating-actions" id="floating-actions">
      <a href={`/s/${id}/calendar`} class="action-btn action-btn--secondary">
        <svg width="18" height="18" viewBox="0 0 18 18" fill="none">
          <circle cx="9" cy="9" r="7.5" stroke="currentColor" stroke-width="1.5"/>
          <path d="M9 5v4l2.5 2.5" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"/>
        </svg>
        Find Showtimes
      </a>
      <button class="action-btn action-btn--primary" id="open-share-btn">
        <svg width="16" height="16" viewBox="0 0 16 16" fill="none">
          <path d="M4 10v2a2 2 0 002 2h4a2 2 0 002-2v-2M8 2v8M5 5l3-3 3 3" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
        Share
      </button>
    </div>

    <!-- Movie detail drawer -->
    <MovieDetailDrawer />

    <!-- Share dialog -->
    <Drawer id="share-drawer" title="Share Your List">
      <div class="share-content">
        <div class="share-link-row">
          <input readonly class="share-link-text" id="share-link-text" />
          <button class="share-icon-btn" id="copy-link-btn" title="Copy link">
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M10 13a5 5 0 0 0 7.54.54l3-3a5 5 0 0 0-7.07-7.07l-1.72 1.71"/>
              <path d="M14 11a5 5 0 0 0-7.54-.54l-3 3a5 5 0 0 0 7.07 7.07l1.71-1.71"/>
            </svg>
          </button>
        </div>
        <div class="share-preview-embed">
          <pre class="share-text-embed" id="share-text-embed"></pre>
          <button class="share-floating-btn" id="copy-text-btn" title="Copy text">
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <rect width="8" height="4" x="8" y="2" rx="1" ry="1"/>
              <path d="M16 4h2a2 2 0 0 1 2 2v14a2 2 0 0 1-2 2H6a2 2 0 0 1-2-2V6a2 2 0 0 1 2-2h2"/>
            </svg>
          </button>
        </div>
        <div class="share-actions-row">
          <button class="share-action-btn share-action-btn--primary" id="share-btn">
            <svg width="16" height="16" viewBox="0 0 16 16" fill="none">
              <path d="M4 10v2a2 2 0 002 2h4a2 2 0 002-2v-2M8 2v8M5 5l3-3 3 3" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
            Share
          </button>
        </div>
      </div>
    </Drawer>
  </div>
</Layout>

<script define:vars={{ movieDataJson, sessionId: id, seriesName: config.name }}>
  window.__movieData = JSON.parse(movieDataJson);
  window.__sessionId = sessionId;
  window.__seriesName = seriesName;
</script>

<script>
  import { getReactions, setReaction, getUserId } from '@utils/storageManager';
  import { encodeReactionsCompact } from '@utils/compactEncoder';
  import { toTitleCase, formatRuntime } from '@utils/movieUtils';
  import { escapeHtml, escapeAttr } from '@utils/htmlEscape';
  import type { UniqueMovie, MovieReaction } from '@types/session';

  const sessionId = (window as any).__sessionId as string;
  const seriesName = (window as any).__seriesName as string;
  const allMovies = (window as any).__movieData as UniqueMovie[];

  function renderCart() {
    const reactions = getReactions(sessionId);
    const yesMovies = allMovies.filter(m => reactions[m.id] === 'yes');
    const maybeMovies = allMovies.filter(m => reactions[m.id] === 'maybe');
    const noMovies = allMovies.filter(m => reactions[m.id] === 'no');
    const unmarkedMovies = allMovies.filter(m => !reactions[m.id] || reactions[m.id] === 'none');
    const hasAny = yesMovies.length > 0 || maybeMovies.length > 0 || noMovies.length > 0 || unmarkedMovies.length > 0;

    // Show/hide empty state
    const emptyEl = document.getElementById('cart-empty');
    if (emptyEl) emptyEl.style.display = hasAny ? 'none' : 'flex';

    // Show/hide floating actions (only show if has reactions, not just unmarked)
    const hasReactions = yesMovies.length > 0 || maybeMovies.length > 0 || noMovies.length > 0;
    const actionsEl = document.getElementById('floating-actions');
    if (actionsEl) actionsEl.style.display = hasReactions ? 'flex' : 'none';

    // Render sections
    renderSection('cart-yes', yesMovies, 'yes');
    renderSection('cart-maybe', maybeMovies, 'maybe');
    renderSection('cart-no', noMovies, 'no');
    renderSection('cart-unmarked', unmarkedMovies, 'none');

    // Update share preview
    updateSharePreview(yesMovies);
  }

  function renderSection(prefix: string, movies: UniqueMovie[], reaction: MovieReaction) {
    const section = document.getElementById(`${prefix}-section`);
    const items = document.getElementById(`${prefix}-items`);
    const count = document.getElementById(`${prefix}-count`);

    if (section) section.style.display = movies.length > 0 ? 'block' : 'none';
    if (count) count.textContent = String(movies.length);

    if (items) {
      items.innerHTML = movies.map(um => {
        const title = escapeHtml(toTitleCase(um.movie.Movie));
        const meta = escapeHtml([um.movie.director, um.movie.year].filter(Boolean).join(', '));
        return `
          <div class="cart-item" data-film-slug="${escapeAttr(um.id)}">
            <div class="cart-item-info">
              <p class="cart-item-title">${title}</p>
              <p class="cart-item-meta">${meta}</p>
            </div>
            <div class="cart-item-reactions">
              <button class="cart-reaction-btn cart-reaction-btn--yes ${reaction === 'yes' ? 'active' : ''}" data-reaction="yes" data-film-slug="${escapeAttr(um.id)}" title="Yes" aria-label="Mark as Yes">
                <svg width="14" height="14" viewBox="0 0 16 16" fill="none"><path d="M13.5 4.5l-7 7L3 8" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/></svg>
                <span class="btn-label">Yes</span>
              </button>
              <button class="cart-reaction-btn cart-reaction-btn--maybe ${reaction === 'maybe' ? 'active' : ''}" data-reaction="maybe" data-film-slug="${escapeAttr(um.id)}" title="Maybe" aria-label="Mark as Maybe">
                <svg width="14" height="14" viewBox="0 0 16 16" fill="none"><circle cx="8" cy="11.5" r="1" fill="currentColor"/><path d="M6 6a2 2 0 114 0c0 1-1.5 1.5-2 2.5" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"/></svg>
                <span class="btn-label">Maybe</span>
              </button>
              <button class="cart-reaction-btn cart-reaction-btn--no ${reaction === 'no' ? 'active' : ''}" data-reaction="no" data-film-slug="${escapeAttr(um.id)}" title="No" aria-label="Mark as No">
                <svg width="14" height="14" viewBox="0 0 16 16" fill="none"><path d="M4 4l8 8M12 4l-8 8" stroke="currentColor" stroke-width="2" stroke-linecap="round"/></svg>
                <span class="btn-label">No</span>
              </button>
            </div>
          </div>
        `;
      }).join('');
    }
  }

  function updateSharePreview(yesMovies: UniqueMovie[]) {
    const reactions = getReactions(sessionId);
    const maybeMovies = allMovies.filter(m => reactions[m.id] === 'maybe');
    const noMovies = allMovies.filter(m => reactions[m.id] === 'no');
    const unmarkedMovies = allMovies.filter(m => !reactions[m.id] || reactions[m.id] === 'none');

    // Generate shareable URL
    const encoded = encodeReactionsCompact(reactions, allMovies);
    const userId = getUserId();
    const url = `${window.location.origin}/s/${sessionId}/shared?u=${encodeURIComponent(userId)}&r=${encodeURIComponent(encoded)}`;

    // Build full share text
    const displayCount = 2;
    let shareText = `My picks for Film Forum's ${seriesName} series:\n\n`;

    // Yes section
    if (yesMovies.length > 0) {
      const displayYes = yesMovies.slice(0, displayCount);
      shareText += displayYes.map(um => `- ${toTitleCase(um.movie.Movie)}`).join('\n');
      if (yesMovies.length > displayCount) {
        shareText += `\n...and ${yesMovies.length - displayCount} more`;
      }
      shareText += '\n\n';
    }

    shareText += `Full list: ${url}`;

    // Update text preview with share text
    const textEmbed = document.getElementById('share-text-embed') as HTMLPreElement;
    if (textEmbed) {
      textEmbed.textContent = shareText;
    }

    // Update link input
    const linkText = document.getElementById('share-link-text') as HTMLInputElement;
    if (linkText) {
      linkText.value = url;
    }

    // Enable/disable buttons (enable if have any reactions)
    const hasReactions = yesMovies.length > 0 || maybeMovies.length > 0 || noMovies.length > 0;
    const shareBtn = document.getElementById('share-btn') as HTMLButtonElement;
    if (shareBtn) shareBtn.disabled = !hasReactions;

    const copyTextBtn = document.getElementById('copy-text-btn') as HTMLButtonElement;
    if (copyTextBtn) copyTextBtn.disabled = !hasReactions;

    const copyLinkBtn = document.getElementById('copy-link-btn') as HTMLButtonElement;
    if (copyLinkBtn) copyLinkBtn.disabled = !hasReactions;

    const openShareBtn = document.getElementById('open-share-btn') as HTMLButtonElement;
    if (openShareBtn) openShareBtn.disabled = !hasReactions;
  }

  // Handle clicks on cart items and reaction buttons
  document.addEventListener('click', (e) => {
    const target = e.target as HTMLElement;

    // Handle reaction button clicks
    const btn = target.closest('.cart-reaction-btn') as HTMLElement | null;
    if (btn) {
      const filmSlug = btn.dataset.filmSlug;
      const reaction = btn.dataset.reaction as MovieReaction;
      if (!filmSlug || !reaction) return;

      const reactions = getReactions(sessionId);
      const current = reactions[filmSlug] || 'none';
      const newReaction: MovieReaction = current === reaction ? 'none' : reaction;
      setReaction(sessionId, filmSlug, newReaction);

      renderCart();
      return;
    }

    // Handle cart item clicks (open movie detail)
    const item = target.closest('.cart-item') as HTMLElement | null;
    if (item && !target.closest('button, a')) {
      const filmSlug = item.dataset.filmSlug;
      if (filmSlug) {
        openMovieDetail(filmSlug);
      }
    }
  });

  function openMovieDetail(filmSlug: string) {
    const idx = allMovies.findIndex(m => m.id === filmSlug);
    if (idx === -1) return;
    showMovieDetail(idx);
    (window as any).openDrawer('movie-detail-drawer');
  }

  function showMovieDetail(index: number) {
    const um = allMovies[index];
    if (!um) return;

    const { movie, id } = um;
    const reactions = getReactions(sessionId);
    const reaction = reactions[id] || 'none';

    // Update poster
    const img = document.getElementById('detail-poster-img') as HTMLImageElement;
    if (img) {
      img.src = movie.poster_url || '';
      img.alt = movie.Movie;
    }

    // Update text
    const titleEl = document.getElementById('detail-title');
    if (titleEl) titleEl.textContent = toTitleCase(movie.Movie);

    const metaEl = document.getElementById('detail-meta');
    if (metaEl) metaEl.textContent = [movie.director, movie.year, formatRuntime(movie.runtime)].filter(Boolean).join(' · ');

    const actorsEl = document.getElementById('detail-actors');
    if (actorsEl) actorsEl.textContent = movie.actors || '';

    const descEl = document.getElementById('detail-description');
    if (descEl) descEl.textContent = movie.description || '';

    // Update links
    const filmUrl = document.getElementById('detail-film-url') as HTMLAnchorElement;
    if (filmUrl) {
      filmUrl.href = movie.film_url || '#';
      filmUrl.style.display = movie.film_url ? '' : 'none';
    }

    const ticketsUrl = document.getElementById('detail-tickets-url') as HTMLAnchorElement;
    if (ticketsUrl) {
      ticketsUrl.href = um.showtimes[0]?.tickets || '#';
      ticketsUrl.style.display = um.showtimes[0]?.tickets ? '' : 'none';
    }

    // Update detail drawer reaction buttons
    document.querySelectorAll('#detail-reactions .detail-rbtn').forEach(btn => {
      (btn as HTMLElement).dataset.filmSlug = id;
      const btnReaction = (btn as HTMLElement).dataset.reaction;
      btn.classList.toggle('active', btnReaction === reaction);
      (btn as HTMLElement).setAttribute('aria-pressed', String(btnReaction === reaction));
    });
  }

  // Handle reactions from detail drawer
  document.addEventListener('click', (e) => {
    const btn = (e.target as HTMLElement).closest('.detail-rbtn') as HTMLElement | null;
    if (!btn) return;

    const filmSlug = btn.dataset.filmSlug;
    const reaction = btn.dataset.reaction as MovieReaction;
    if (!filmSlug || !reaction) return;

    const reactions = getReactions(sessionId);
    const current = reactions[filmSlug] || 'none';
    const newReaction: MovieReaction = current === reaction ? 'none' : reaction;
    setReaction(sessionId, filmSlug, newReaction);

    // Update detail drawer buttons
    document.querySelectorAll('#detail-reactions .detail-rbtn').forEach(b => {
      const r = (b as HTMLElement).dataset.reaction;
      b.classList.toggle('active', r === newReaction);
    });

    renderCart();
  });

  // Open share dialog
  document.getElementById('open-share-btn')?.addEventListener('click', () => {
    (window as any).openDrawer('share-drawer');
  });

  // Copy text button
  document.getElementById('copy-text-btn')?.addEventListener('click', async () => {
    const textEmbed = document.getElementById('share-text-embed') as HTMLPreElement;
    if (!textEmbed) return;

    try {
      await navigator.clipboard.writeText(textEmbed.textContent || '');
      const btn = document.getElementById('copy-text-btn');
      if (btn) {
        const orig = btn.innerHTML;
        btn.innerHTML = '<svg width="16" height="16" viewBox="0 0 16 16" fill="none"><path d="M13.5 4.5l-7 7L3 8" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/></svg>';
        setTimeout(() => { btn.innerHTML = orig; }, 2000);
      }
    } catch {
      console.error('Failed to copy to clipboard');
    }
  });

  // Copy link button
  document.getElementById('copy-link-btn')?.addEventListener('click', async () => {
    const linkText = document.getElementById('share-link-text') as HTMLInputElement;
    if (!linkText || !linkText.value) return;

    try {
      await navigator.clipboard.writeText(linkText.value);
      const btn = document.getElementById('copy-link-btn');
      if (btn) {
        const orig = btn.innerHTML;
        btn.innerHTML = '<svg width="16" height="16" viewBox="0 0 16 16" fill="none"><path d="M13.5 4.5l-7 7L3 8" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/></svg> Copied!';
        setTimeout(() => { btn.innerHTML = orig; }, 2000);
      }
    } catch {
      console.error('Failed to copy to clipboard');
    }
  });

  // Share button
  document.getElementById('share-btn')?.addEventListener('click', async () => {
    const textEmbed = document.getElementById('share-text-embed') as HTMLPreElement;
    if (!textEmbed || !textEmbed.textContent) return;

    if (navigator.share) {
      try {
        await navigator.share({ text: textEmbed.textContent });
        (window as any).closeDrawer('share-drawer');
      } catch {
        // User cancelled - don't show error
      }
    } else {
      // Fallback to copy
      try {
        await navigator.clipboard.writeText(textEmbed.textContent);
        const btn = document.getElementById('share-btn');
        if (btn) {
          const orig = btn.innerHTML;
          btn.textContent = 'Copied!';
          setTimeout(() => {
            btn.innerHTML = orig;
            (window as any).closeDrawer('share-drawer');
          }, 1500);
        }
      } catch {
        console.error('Failed to copy to clipboard');
      }
    }
  });

  // Initialize
  renderCart();
</script>

<style>
  .page-header {
    padding: 16px 0 12px;
  }

  .back-link {
    display: inline-flex;
    align-items: center;
    gap: 4px;
    font-size: 13px;
    color: var(--text-secondary);
    text-decoration: none;
    margin-bottom: 8px;
    transition: color 0.15s;
  }

  .back-link:hover {
    color: var(--accent);
  }

  .page-title {
    font-size: 22px;
    font-weight: 700;
    color: var(--text-primary);
    margin: 0;
  }

  .cart-sections {
    display: flex;
    flex-direction: column;
    gap: 20px;
  }

  .cart-section {
    display: none;
  }

  .section-title {
    display: flex;
    align-items: center;
    gap: 8px;
    font-size: 18px;
    font-weight: 700;
    color: var(--text-primary);
    margin: 0 0 10px 0;
    text-transform: uppercase;
    letter-spacing: 0.03em;
  }

  .section-title--yes { color: var(--reaction-yes, #22c55e); }
  .section-title--maybe { color: var(--reaction-maybe, #f59e0b); }
  .section-title--no { color: var(--reaction-no, #ef4444); }
  .section-title--unmarked { color: var(--text-tertiary); }

  .section-count {
    font-size: 13px;
    font-weight: 500;
    opacity: 0.7;
  }

  .section-items {
    display: flex;
    flex-direction: column;
    gap: 6px;
  }

  :global(.cart-item) {
    display: flex;
    align-items: center;
    gap: 12px;
    padding: 12px 14px;
    background: var(--bg-movie);
    border-radius: 8px;
    transition: background-color 0.15s;
    cursor: pointer;
  }

  :global(.cart-item:hover) {
    background: var(--bg-movie-hover);
  }

  :global(.cart-item-info) {
    flex: 1;
    min-width: 0;
  }

  :global(.cart-item-title) {
    font-size: 14px;
    font-weight: 500;
    color: var(--text-primary);
    margin: 0;
  }

  :global(.cart-item-meta) {
    font-size: 12px;
    color: var(--text-secondary);
    margin: 2px 0 0 0;
  }

  :global(.cart-item-reactions) {
    display: flex;
    gap: 2px;
    flex-shrink: 0;
  }

  :global(.cart-reaction-btn) {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 4px;
    min-width: 28px;
    height: 28px;
    padding: 0;
    background: transparent;
    border: 1.5px solid transparent;
    border-radius: 6px;
    cursor: pointer;
    transition: all 0.15s;
    font-size: 13px;
    font-weight: 500;
    white-space: nowrap;
  }

  /* Hide text labels on mobile (< 640px) */
  :global(.cart-reaction-btn .btn-label) {
    display: none;
  }

  /* Show text labels on desktop (>= 640px) */
  @media (min-width: 640px) {
    :global(.cart-reaction-btn) {
      padding: 0 10px;
    }
    :global(.cart-reaction-btn .btn-label) {
      display: inline;
    }
  }

  :global(.cart-reaction-btn--yes) {
    color: var(--reaction-yes);
    border-color: var(--reaction-yes);
  }
  :global(.cart-reaction-btn--yes.active) {
    background: var(--reaction-yes);
    color: #fff;
  }

  :global(.cart-reaction-btn--maybe) {
    color: var(--reaction-maybe);
    border-color: var(--reaction-maybe);
  }
  :global(.cart-reaction-btn--maybe.active) {
    background: var(--reaction-maybe);
    color: #fff;
  }

  :global(.cart-reaction-btn--no) {
    color: var(--reaction-no);
    border-color: var(--reaction-no);
  }
  :global(.cart-reaction-btn--no.active) {
    background: var(--reaction-no);
    color: #fff;
  }

  .cart-empty {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    padding: 40px 20px;
    gap: 8px;
  }

  .empty-icon {
    color: var(--text-tertiary);
    opacity: 0.5;
    margin-bottom: 4px;
  }

  .empty-title {
    font-size: 16px;
    font-weight: 600;
    color: var(--text-primary);
    margin: 0;
  }

  .empty-hint {
    font-size: 13px;
    color: var(--text-secondary);
    margin: 0;
    max-width: 260px;
  }

  .bottom-spacer {
    height: 20px;
  }

  /* Floating action buttons */
  .floating-actions {
    position: fixed;
    bottom: 0;
    left: 0;
