---
/**
 * Cart page showing YOUR saved movies from localStorage.
 * Fully editable - you can change or remove reactions.
 * Includes share dialog and floating action buttons.
 */
import Layout from '../../../../layouts/Layout.astro';
import Drawer from '../../../../components/Drawer.astro';
import type { Movie } from '../../../../utils/movieUtils';
import { toTitleCase, formatRuntime } from '../../../../utils/movieUtils';
import { getAllSeriesIds, getSeriesConfig } from '../../../../config/series';
import {
  deduplicateMovies,
  sortMovies,
} from '../../../../utils/sessionUtils';

export function getStaticPaths() {
  return getAllSeriesIds().map(id => ({ params: { id } }));
}

const { id } = Astro.params;
const config = getSeriesConfig(id!);
if (!config) return Astro.redirect('/');

// Load movie data at build time
let allMovies: Movie[] = [];
try {
  const fs = await import('node:fs');
  const path = await import('node:path');
  const dataPath = path.join(process.cwd(), 'public', config.dataFile);
  const data = fs.readFileSync(dataPath, 'utf-8');
  allMovies = JSON.parse(data);
} catch {
  allMovies = [];
}

const uniqueMovies = sortMovies(deduplicateMovies(allMovies), 'alpha');
const movieDataJson = JSON.stringify(uniqueMovies);
---

<Layout title={`Your Saved Movies — ${config.name}`}>
  <main class="cart-page" data-session-id={id}>
    <header class="page-header">
      <a href={`/s/${id}/list`} class="back-link">
        <svg width="16" height="16" viewBox="0 0 16 16" fill="none">
          <path d="M10 3L5 8l5 5" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
        Back to full list
      </a>
      <h1 class="page-title">Your Saved Movies</h1>
    </header>

    <div class="cart-sections" id="cart-sections">
      <div class="cart-section" id="cart-yes-section">
        <h2 class="section-title">
          <span class="section-dot section-dot--yes"></span>
          Yes
          <span class="section-count" id="cart-yes-count">0</span>
        </h2>
        <div class="section-items" id="cart-yes-items"></div>
      </div>

      <div class="cart-section" id="cart-maybe-section">
        <h2 class="section-title">
          <span class="section-dot section-dot--maybe"></span>
          Maybe
          <span class="section-count" id="cart-maybe-count">0</span>
        </h2>
        <div class="section-items" id="cart-maybe-items"></div>
      </div>

      <div class="cart-section" id="cart-no-section">
        <h2 class="section-title">
          <span class="section-dot section-dot--no"></span>
          No
          <span class="section-count" id="cart-no-count">0</span>
        </h2>
        <div class="section-items" id="cart-no-items"></div>
      </div>

      <div class="cart-empty" id="cart-empty">
        <div class="empty-icon">
          <svg width="40" height="40" viewBox="0 0 40 40" fill="none">
            <path d="M10 6a4 4 0 00-4 4v24l14-8 14 8V10a4 4 0 00-4-4H10z" stroke="currentColor" stroke-width="2" fill="none"/>
          </svg>
        </div>
        <p class="empty-title">No movies saved yet</p>
        <p class="empty-hint">Tap Yes, Maybe, or No on any movie to start building your list</p>
      </div>
    </div>

    <!-- Spacer for floating buttons -->
    <div class="bottom-spacer"></div>

    <!-- Floating action buttons -->
    <div class="floating-actions" id="floating-actions">
      <a href={`/s/${id}/calendar`} class="action-btn action-btn--secondary">
        <svg width="18" height="18" viewBox="0 0 18 18" fill="none">
          <circle cx="9" cy="9" r="7.5" stroke="currentColor" stroke-width="1.5"/>
          <path d="M9 5v4l2.5 2.5" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"/>
        </svg>
        Find Showtimes
      </a>
      <button class="action-btn action-btn--primary" id="open-share-btn">
        <svg width="16" height="16" viewBox="0 0 16 16" fill="none">
          <path d="M4 10v2a2 2 0 002 2h4a2 2 0 002-2v-2M8 2v8M5 5l3-3 3 3" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
        Share
      </button>
    </div>

    <!-- Share dialog -->
    <Drawer id="share-drawer" title="Share Your List">
      <div class="share-content">
        <p class="share-preview-text" id="share-preview-text"></p>
        <ul class="share-preview-list" id="share-preview-list"></ul>
        <div class="share-preview-url">
          <input type="text" readonly class="share-url-input" id="share-url-input" />
        </div>
        <button class="share-action-btn" id="share-btn">
          <svg width="16" height="16" viewBox="0 0 16 16" fill="none">
            <path d="M4 10v2a2 2 0 002 2h4a2 2 0 002-2v-2M8 2v8M5 5l3-3 3 3" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
          Share
        </button>
      </div>
    </Drawer>
  </main>
</Layout>

<script define:vars={{ movieDataJson, sessionId: id, seriesName: config.name }}>
  window.__movieData = JSON.parse(movieDataJson);
  window.__sessionId = sessionId;
  window.__seriesName = seriesName;
</script>

<script>
  import { getReactions, setReaction, getUserId } from '../../../../utils/storageManager';
  import { encodeReactionsCompact } from '../../../../utils/compactEncoder';
  import { toTitleCase, formatRuntime } from '../../../../utils/movieUtils';
  import type { UniqueMovie, MovieReaction } from '../../../../types/session';

  const sessionId = (window as any).__sessionId as string;
  const seriesName = (window as any).__seriesName as string;
  const allMovies = (window as any).__movieData as UniqueMovie[];

  function renderCart() {
    const reactions = getReactions(sessionId);
    const yesMovies = allMovies.filter(m => reactions[m.id] === 'yes');
    const maybeMovies = allMovies.filter(m => reactions[m.id] === 'maybe');
    const noMovies = allMovies.filter(m => reactions[m.id] === 'no');
    const hasAny = yesMovies.length > 0 || maybeMovies.length > 0 || noMovies.length > 0;

    // Show/hide empty state
    const emptyEl = document.getElementById('cart-empty');
    if (emptyEl) emptyEl.style.display = hasAny ? 'none' : 'flex';

    // Show/hide floating actions
    const actionsEl = document.getElementById('floating-actions');
    if (actionsEl) actionsEl.style.display = hasAny ? 'flex' : 'none';

    // Render sections
    renderSection('cart-yes', yesMovies, 'yes');
    renderSection('cart-maybe', maybeMovies, 'maybe');
    renderSection('cart-no', noMovies, 'no');

    // Update share preview
    updateSharePreview(yesMovies);
  }

  function renderSection(prefix: string, movies: UniqueMovie[], reaction: MovieReaction) {
    const section = document.getElementById(`${prefix}-section`);
    const items = document.getElementById(`${prefix}-items`);
    const count = document.getElementById(`${prefix}-count`);

    if (section) section.style.display = movies.length > 0 ? 'block' : 'none';
    if (count) count.textContent = String(movies.length);

    if (items) {
      items.innerHTML = movies.map(um => {
        const title = toTitleCase(um.movie.Movie);
        const meta = [um.movie.director, um.movie.year].filter(Boolean).join(', ');
        return `
          <div class="cart-item" data-movie-id="${um.id}">
            <div class="cart-item-info">
              <p class="cart-item-title">${title}</p>
              <p class="cart-item-meta">${meta}</p>
            </div>
            <div class="cart-item-reactions">
              <button class="cart-reaction-btn cart-reaction-btn--yes ${reaction === 'yes' ? 'active' : ''}" data-reaction="yes" data-movie-id="${um.id}" title="Yes" aria-label="Mark as Yes">
                <svg width="14" height="14" viewBox="0 0 16 16" fill="none"><path d="M13.5 4.5l-7 7L3 8" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/></svg>
              </button>
              <button class="cart-reaction-btn cart-reaction-btn--maybe ${reaction === 'maybe' ? 'active' : ''}" data-reaction="maybe" data-movie-id="${um.id}" title="Maybe" aria-label="Mark as Maybe">
                <svg width="14" height="14" viewBox="0 0 16 16" fill="none"><circle cx="8" cy="11.5" r="1" fill="currentColor"/><path d="M6 6a2 2 0 114 0c0 1-1.5 1.5-2 2.5" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"/></svg>
              </button>
              <button class="cart-reaction-btn cart-reaction-btn--no ${reaction === 'no' ? 'active' : ''}" data-reaction="no" data-movie-id="${um.id}" title="No" aria-label="Mark as No">
                <svg width="14" height="14" viewBox="0 0 16 16" fill="none"><path d="M4 4l8 8M12 4l-8 8" stroke="currentColor" stroke-width="2" stroke-linecap="round"/></svg>
              </button>
            </div>
          </div>
        `;
      }).join('');
    }
  }

  function updateSharePreview(yesMovies: UniqueMovie[]) {
    // Update preview text
    const textEl = document.getElementById('share-preview-text');
    if (textEl) {
      textEl.textContent = `These are the movies I want to see at Film Forum's ${seriesName} series:`;
    }

    // Update list (show first 5, then "and X more")
    const listEl = document.getElementById('share-preview-list');
    if (listEl) {
      const displayCount = 5;
      const displayMovies = yesMovies.slice(0, displayCount);
      const remaining = yesMovies.length - displayCount;

      listEl.innerHTML = displayMovies.map(um => {
        const title = toTitleCase(um.movie.Movie);
        return `<li>${title}</li>`;
      }).join('');

      if (remaining > 0) {
        listEl.innerHTML += `<li class="more-count">[and ${remaining} more...]</li>`;
      }
    }

    // Update shareable URL
    const reactions = getReactions(sessionId);
    const encoded = encodeReactionsCompact(reactions, allMovies);
    const userId = getUserId();
    const url = `${window.location.origin}/s/${sessionId}/shared?u=${userId}&r=${encoded}`;

    const urlInput = document.getElementById('share-url-input') as HTMLInputElement;
    if (urlInput) urlInput.value = url;

    // Enable/disable share button
    const shareBtn = document.getElementById('share-btn') as HTMLButtonElement;
    if (shareBtn) shareBtn.disabled = yesMovies.length === 0;

    const openShareBtn = document.getElementById('open-share-btn') as HTMLButtonElement;
    if (openShareBtn) openShareBtn.disabled = yesMovies.length === 0;
  }

  // Handle reaction clicks
  document.addEventListener('click', (e) => {
    const btn = (e.target as HTMLElement).closest('.cart-reaction-btn') as HTMLElement | null;
    if (!btn) return;

    const movieId = btn.dataset.movieId;
    const reaction = btn.dataset.reaction as MovieReaction;
    if (!movieId || !reaction) return;

    const reactions = getReactions(sessionId);
    const current = reactions[movieId] || 'none';
    const newReaction: MovieReaction = current === reaction ? 'none' : reaction;
    setReaction(sessionId, movieId, newReaction);

    renderCart();
  });

  // Open share dialog
  document.getElementById('open-share-btn')?.addEventListener('click', () => {
    (window as any).openDrawer('share-drawer');
  });

  // Share button
  document.getElementById('share-btn')?.addEventListener('click', async () => {
    const reactions = getReactions(sessionId);
    const yesMovies = allMovies.filter(m => reactions[m.id] === 'yes');

    if (yesMovies.length === 0) return;

    const encoded = encodeReactionsCompact(reactions, allMovies);
    const userId = getUserId();
    const url = `${window.location.origin}/s/${sessionId}/shared?u=${userId}&r=${encoded}`;

    // Format share text
    const displayCount = 5;
    const displayMovies = yesMovies.slice(0, displayCount);
    const remaining = yesMovies.length - displayCount;

    const movieList = displayMovies.map(um => `- ${toTitleCase(um.movie.Movie)}`).join('\n');
    const moreText = remaining > 0 ? `\n[and ${remaining} more...]\n` : '\n';
    const shareText = `These are the movies I want to see at Film Forum's ${seriesName} series:\n\n${movieList}${moreText}\nFull list: ${url}`;

    if (navigator.share) {
      try {
        await navigator.share({ text: shareText });
        (window as any).closeDrawer('share-drawer');
      } catch {
        // User cancelled or share failed, fallback to clipboard
        fallbackCopy(shareText);
      }
    } else {
      fallbackCopy(shareText);
    }
  });

  async function fallbackCopy(text: string) {
    try {
      await navigator.clipboard.writeText(text);
      const btn = document.getElementById('share-btn');
      if (btn) {
        const orig = btn.innerHTML;
        btn.textContent = 'Copied!';
        setTimeout(() => {
          btn.innerHTML = orig;
          (window as any).closeDrawer('share-drawer');
        }, 1500);
      }
    } catch {
      console.error('Failed to copy to clipboard');
    }
  }

  // Initialize
  renderCart();
</script>

<style>
  .cart-page {
    max-width: 600px;
    margin: 0 auto;
    padding: 0 16px 100px;
  }

  .page-header {
    padding: 16px 0 12px;
  }

  .back-link {
    display: inline-flex;
    align-items: center;
    gap: 4px;
    font-size: 13px;
    color: var(--text-secondary);
    text-decoration: none;
    margin-bottom: 8px;
    transition: color 0.15s;
  }

  .back-link:hover {
    color: var(--accent);
  }

  .page-title {
    font-size: 22px;
    font-weight: 700;
    color: var(--text-primary);
    margin: 0;
  }

  .cart-sections {
    display: flex;
    flex-direction: column;
    gap: 20px;
  }

  .cart-section {
    display: none;
  }

  .section-title {
    display: flex;
    align-items: center;
    gap: 8px;
    font-size: 15px;
    font-weight: 600;
    color: var(--text-primary);
    margin: 0 0 10px 0;
  }

  .section-dot {
    width: 8px;
    height: 8px;
    border-radius: 50%;
  }

  .section-dot--yes { background: var(--reaction-yes); }
  .section-dot--maybe { background: var(--reaction-maybe); }
  .section-dot--no { background: var(--reaction-no); }

  .section-count {
    font-size: 12px;
    font-weight: 500;
    color: var(--text-tertiary);
  }

  .section-items {
    display: flex;
    flex-direction: column;
    gap: 6px;
  }

  :global(.cart-item) {
    display: flex;
    align-items: center;
    gap: 12px;
    padding: 12px 14px;
    background: var(--bg-movie);
    border-radius: 8px;
    transition: background-color 0.15s;
  }

  :global(.cart-item:hover) {
    background: var(--bg-movie-hover);
  }

  :global(.cart-item-info) {
    flex: 1;
    min-width: 0;
  }

  :global(.cart-item-title) {
    font-size: 14px;
    font-weight: 500;
    color: var(--text-primary);
    margin: 0;
  }

  :global(.cart-item-meta) {
    font-size: 12px;
    color: var(--text-secondary);
    margin: 2px 0 0 0;
  }

  :global(.cart-item-reactions) {
    display: flex;
    gap: 2px;
    flex-shrink: 0;
  }

  :global(.cart-reaction-btn) {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 28px;
    height: 28px;
    padding: 0;
    background: transparent;
    border: 1.5px solid transparent;
    border-radius: 6px;
    cursor: pointer;
    transition: all 0.15s;
  }

  :global(.cart-reaction-btn--yes) {
    color: var(--reaction-yes);
    border-color: var(--reaction-yes);
  }
  :global(.cart-reaction-btn--yes.active) {
    background: var(--reaction-yes);
    color: #fff;
  }

  :global(.cart-reaction-btn--maybe) {
    color: var(--reaction-maybe);
    border-color: var(--reaction-maybe);
  }
  :global(.cart-reaction-btn--maybe.active) {
    background: var(--reaction-maybe);
    color: #fff;
  }

  :global(.cart-reaction-btn--no) {
    color: var(--reaction-no);
    border-color: var(--reaction-no);
  }
  :global(.cart-reaction-btn--no.active) {
    background: var(--reaction-no);
    color: #fff;
  }

  .cart-empty {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    padding: 40px 20px;
    gap: 8px;
  }

  .empty-icon {
    color: var(--text-tertiary);
    opacity: 0.5;
    margin-bottom: 4px;
  }

  .empty-title {
    font-size: 16px;
    font-weight: 600;
    color: var(--text-primary);
    margin: 0;
  }

  .empty-hint {
    font-size: 13px;
    color: var(--text-secondary);
    margin: 0;
    max-width: 260px;
  }

  .bottom-spacer {
    height: 20px;
  }

  /* Floating action buttons */
  .floating-actions {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    z-index: 100;
    padding: 8px 16px calc(8px + env(safe-area-inset-bottom, 0px));
    background: var(--bg-body);
    border-top: 1px solid var(--bg-grid);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    display: none;
    gap: 8px;
    max-width: 600px;
    margin: 0 auto;
  }

  @supports (backdrop-filter: blur(12px)) {
    .floating-actions {
      background: color-mix(in srgb, var(--bg-body) 85%, transparent);
    }
  }

  .action-btn {
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
    padding: 12px 16px;
    font-size: 14px;
    font-weight: 500;
    font-family: inherit;
    border-radius: 10px;
    cursor: pointer;
    transition: all 0.15s;
    text-decoration: none;
    border: none;
  }

  .action-btn:active {
    transform: scale(0.97);
  }

  .action-btn--secondary {
    background: var(--bg-movie);
    color: var(--text-primary);
  }

  .action-btn--secondary:hover {
    background: var(--bg-movie-hover);
  }

  .action-btn--primary {
    background: var(--accent);
    color: #fff;
  }

  .action-btn--primary:hover {
    background: var(--accent-bg);
  }

  .action-btn:disabled {
    opacity: 0.4;
    cursor: not-allowed;
  }

  /* Share dialog content */
  .share-content {
    display: flex;
    flex-direction: column;
    gap: 16px;
  }

  .share-preview-text {
    font-size: 14px;
    color: var(--text-secondary);
    margin: 0;
    line-height: 1.5;
  }

  .share-preview-list {
    list-style: none;
    padding: 0;
    margin: 0;
    font-size: 14px;
    color: var(--text-primary);
    line-height: 1.6;
  }

  .share-preview-list li {
    padding-left: 16px;
    position: relative;
  }

  .share-preview-list li::before {
    content: '•';
    position: absolute;
    left: 4px;
    color: var(--text-tertiary);
  }

  .share-preview-list li.more-count {
    color: var(--text-secondary);
    font-style: italic;
  }

  .share-preview-url {
    margin-top: 4px;
  }

  .share-url-input {
    width: 100%;
    padding: 10px 12px;
    font-size: 12px;
    font-family: monospace;
    color: var(--text-secondary);
    background: var(--bg-movie);
    border: 1px solid var(--bg-grid);
    border-radius: 6px;
    outline: none;
  }

  .share-url-input:focus {
    border-color: var(--accent);
  }

  .share-action-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
    width: 100%;
    padding: 12px 16px;
    font-size: 14px;
    font-weight: 600;
    font-family: inherit;
    background: var(--accent);
    color: #fff;
    border: none;
    border-radius: 10px;
    cursor: pointer;
    transition: all 0.15s;
    margin-top: 8px;
  }

  .share-action-btn:hover {
    background: var(--accent-bg);
  }

  .share-action-btn:active {
    transform: scale(0.98);
  }

  .share-action-btn:disabled {
    opacity: 0.4;
    cursor: not-allowed;
  }
</style>
