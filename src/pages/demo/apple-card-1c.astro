---
import Layout from '../../layouts/Layout.astro';

const movies = [
  { title: 'Taxi Driver', poster: '/posters/taxi-driver.png' },
  { title: 'Mean Streets', poster: '/posters/mean-streets.png' },
  { title: 'The Godfather Part II', poster: '/posters/the-godfather-part-ii.png' },
  { title: 'West Side Story', poster: '/posters/west-side-story.png' },
  { title: 'The Naked City', poster: '/posters/the-naked-city.png' },
  { title: 'Once Upon a Time in America', poster: '/posters/once-upon-a-time-in-america.png' },
];
---

<Layout title="1C: Drawer with Larger Border Radius">
  <nav class="demo-nav">
    <a href="/demo/apple-card-1a">1A: Desktop</a>
    <a href="/demo/apple-card-1b">1B: Mobile 16px</a>
    <a href="/demo/apple-card-1c">1C: Mobile 24px</a>
    <a href="/demo/apple-card-1d">1D: Responsive</a>
    <a href="/demo/apple-card-2a">2A: Desktop+Body</a>
    <a href="/demo/apple-card-2b">2B: Mobile+Body</a>
    <a href="/demo/apple-card-2c">2C: Pointer Swipe</a>
  </nav>
  <div class="page-wrapper" id="page-wrapper">
    <div class="demo-page">
      <header class="page-header">
        <h1>1C: Drawer with Larger Border Radius</h1>
        <p>Card starts at 16px radius. Drawer ends at 24px top radius. Animates the border-radius change during FLIP.</p>
      </header>

      <div class="card-grid">
        {movies.map((movie, i) => (
          <article class="movie-card" data-card-index={i} tabindex="0" role="button" aria-label={`View ${movie.title}`}>
            <img src={movie.poster} alt={movie.title} class="card-img" loading="lazy" />
          </article>
        ))}
      </div>
    </div>
  </div>

  <!-- Overlay -->
  <div class="overlay" id="overlay" data-open="false">
    <div class="backdrop" id="backdrop"></div>
  </div>

  <!-- Templates -->
  <template id="tmpl-close">
    <button class="close-btn" aria-label="Close">
      <svg width="14" height="14" viewBox="0 0 16 16" fill="none">
        <path d="M4 4l8 8M12 4l-8 8" stroke="currentColor" stroke-width="2.5" stroke-linecap="round"/>
      </svg>
    </button>
  </template>

  <template id="tmpl-handle">
    <div class="drag-handle"><div class="handle-pill"></div></div>
  </template>
</Layout>

<script>
  const IOS_EASE = 'cubic-bezier(0.32, 0.72, 0, 1)';
  const DURATION = 2000;
  const PAGE_SCALE = 0.94;
  const prefersReducedMotion = window.matchMedia('(prefers-reduced-motion: reduce)').matches;

  const overlay = document.getElementById('overlay')!;
  const backdrop = document.getElementById('backdrop')!;
  const pageWrapper = document.getElementById('page-wrapper')!;

  let isAnimating = false;
  let expandedCard: HTMLElement | null = null;
  let closeBtnEl: HTMLElement | null = null;
  let handleEl: HTMLElement | null = null;
  let placeholder: HTMLElement | null = null;
  let savedSourceRect: DOMRect | null = null;

  function setPageOrigin() {
    const rect = pageWrapper.getBoundingClientRect();
    const originY = window.innerHeight / 2 - rect.top;
    pageWrapper.style.transformOrigin = `center ${originY}px`;
  }

  function open(index: number, el: HTMLElement) {
    if (isAnimating) return;
    isAnimating = true;

    const safetyTimeout = setTimeout(() => {
      if (isAnimating) { console.warn('Safety timeout'); isAnimating = false; }
    }, DURATION * 3);

    try {
      // 1. Reset transforms, measure source
      el.style.transition = 'none';
      el.style.transform = 'none';
      void el.offsetHeight;
      const sourceRect = el.getBoundingClientRect();
      savedSourceRect = sourceRect;

      // 2. Placeholder holds grid space
      placeholder = document.createElement('div');
      placeholder.className = 'card-placeholder';
      placeholder.style.width = sourceRect.width + 'px';
      placeholder.style.height = sourceRect.height + 'px';
      el.parentNode!.insertBefore(placeholder, el);

      // 3. Move card to overlay
      overlay.appendChild(el);
      expandedCard = el;

      // 4. Add .expanded class
      el.classList.add('expanded');
      el.style.opacity = '0';
      el.removeAttribute('tabindex');
      el.removeAttribute('role');

      // 5. Inject close button + handle
      const closeTmpl = document.getElementById('tmpl-close') as HTMLTemplateElement;
      el.appendChild(closeTmpl.content.cloneNode(true));
      closeBtnEl = el.querySelector('.close-btn');

      const handleTmpl = document.getElementById('tmpl-handle') as HTMLTemplateElement;
      el.appendChild(handleTmpl.content.cloneNode(true));
      handleEl = el.querySelector('.drag-handle');

      // Reduced motion: instant
      if (prefersReducedMotion) {
        clearTimeout(safetyTimeout);
        overlay.dataset.open = 'true';
        document.body.style.overflow = 'hidden';
        el.style.opacity = '';
        if (closeBtnEl) { closeBtnEl.style.opacity = '1'; closeBtnEl.style.transform = 'scale(1)'; }
        if (handleEl) { handleEl.style.opacity = '1'; }
        isAnimating = false;
        return;
      }

      // 6. Measure expanded (Last)
      void el.offsetHeight;
      const expandedRect = el.getBoundingClientRect();

      // 7. FLIP calculations
      const scale = sourceRect.width / expandedRect.width;
      const dx = sourceRect.left - expandedRect.left;
      const dy = sourceRect.top - expandedRect.top;

      // 8. FLIP inverse
      el.style.transformOrigin = 'top left';
      el.style.willChange = 'transform';
      el.style.transform = `translate(${dx}px, ${dy}px) scale(${scale})`;
      el.style.opacity = '1';

      // Hide close button + handle initially
      if (closeBtnEl) {
        closeBtnEl.style.transition = 'none';
        closeBtnEl.style.opacity = '0';
        closeBtnEl.style.transform = 'scale(0.8)';
      }
      if (handleEl) {
        handleEl.style.transition = 'none';
        handleEl.style.opacity = '0';
      }

      overlay.dataset.open = 'true';
      document.body.style.overflow = 'hidden';
      void el.offsetHeight;

      // Page scale-down
      setPageOrigin();
      pageWrapper.style.willChange = 'transform';
      pageWrapper.style.transition = `transform ${DURATION}ms ${IOS_EASE}, border-radius ${DURATION}ms ${IOS_EASE}`;
      pageWrapper.style.transform = `scale(${PAGE_SCALE})`;
      pageWrapper.style.borderRadius = '12px';
      pageWrapper.style.overflow = 'hidden';

      // 9. PLAY - animate border-radius from 16px (source) to 24px 24px 0 0 (drawer)
      const animOptions = { duration: DURATION, easing: IOS_EASE, fill: 'forwards' as FillMode };
      const cardAnim = el.animate([
        { transform: `translate(${dx}px, ${dy}px) scale(${scale})`, clipPath: 'inset(0 round 16px)' },
        { transform: 'translate(0px, 0px) scale(1)', clipPath: 'inset(0 round 24px 24px 0 0)' }
      ], animOptions);

      // Backdrop
      backdrop.style.transition = `opacity ${DURATION}ms ${IOS_EASE}`;
      backdrop.style.opacity = '1';

      // Close button + handle entrance (delayed, FIFO)
      const closeDelay = Math.round(DURATION * 0.6);
      if (closeBtnEl) {
        void closeBtnEl.offsetHeight;
        closeBtnEl.style.transition = `opacity 200ms ease-out ${closeDelay}ms, transform 200ms ease-out ${closeDelay}ms`;
        closeBtnEl.style.opacity = '1';
        closeBtnEl.style.transform = 'scale(1)';
      }
      if (handleEl) {
        void handleEl.offsetHeight;
        handleEl.style.transition = `opacity 200ms ease-out ${closeDelay}ms`;
        handleEl.style.opacity = '1';
      }

      // 10. Commit final state
      cardAnim.finished.then(() => {
        clearTimeout(safetyTimeout);
        el.style.transform = '';
        el.style.clipPath = '';
        el.style.willChange = '';
        el.style.transformOrigin = '';
        cardAnim.cancel();
        pageWrapper.style.transition = '';
        if (closeBtnEl) closeBtnEl.style.transition = '';
        if (handleEl) handleEl.style.transition = '';
        isAnimating = false;
      }).catch(() => { clearTimeout(safetyTimeout); isAnimating = false; });
    } catch (error) {
      console.error('Error during open:', error);
      clearTimeout(safetyTimeout);
      isAnimating = false;
      if (expandedCard) { expandedCard.classList.remove('expanded'); expandedCard.style.opacity = ''; }
      document.body.style.overflow = '';
      overlay.dataset.open = 'false';
    }
  }

  function close() {
    if (isAnimating || !expandedCard) return;
    isAnimating = true;

    const safetyTimeout = setTimeout(() => {
      if (isAnimating) { console.warn('Safety timeout'); isAnimating = false; }
    }, DURATION * 3);

    try {
      const el = expandedCard;

      if (prefersReducedMotion) {
        clearTimeout(safetyTimeout);
        cleanupExpansion(el);
        isAnimating = false;
        return;
      }

      // 1. Fade out close button + handle FAST (FIFO - first out)
      if (closeBtnEl) {
        closeBtnEl.style.transition = 'opacity 150ms ease-in, transform 150ms ease-in';
        closeBtnEl.style.opacity = '0';
        closeBtnEl.style.transform = 'scale(0.8)';
      }
      if (handleEl) {
        handleEl.style.transition = 'opacity 150ms ease-in';
        handleEl.style.opacity = '0';
      }

      // 2. Measure current expanded + use saved source as target
      el.style.transformOrigin = 'top left';
      el.style.willChange = 'transform';
      void el.offsetHeight;

      const expandedRect = el.getBoundingClientRect();
      const targetRect = savedSourceRect!;

      const scale = targetRect.width / expandedRect.width;
      const dx = targetRect.left - expandedRect.left;
      const dy = targetRect.top - expandedRect.top;

      // 3. Animate to source - border-radius from 24px 24px 0 0 back to 16px
      const animOptions = { duration: DURATION, easing: IOS_EASE, fill: 'forwards' as FillMode };
      const cardAnim = el.animate([
        { transform: 'translate(0px, 0px) scale(1)', clipPath: 'inset(0 round 24px 24px 0 0)' },
        { transform: `translate(${dx}px, ${dy}px) scale(${scale})`, clipPath: 'inset(0 round 16px)' }
      ], animOptions);

      // Backdrop
      backdrop.style.transition = `opacity ${DURATION}ms ${IOS_EASE}`;
      backdrop.style.opacity = '0';

      // Un-scale page
      pageWrapper.style.willChange = 'transform';
      pageWrapper.style.transition = `transform ${DURATION}ms ${IOS_EASE}, border-radius ${DURATION}ms ${IOS_EASE}`;
      pageWrapper.style.transform = '';
      pageWrapper.style.borderRadius = '';

      // 4. Clean up
      cardAnim.finished.then(() => {
        clearTimeout(safetyTimeout);
        cardAnim.cancel();
        cleanupExpansion(el);
        isAnimating = false;
      }).catch(() => {
        clearTimeout(safetyTimeout);
        cleanupExpansion(el);
        isAnimating = false;
      });
    } catch (error) {
      console.error('Error during close:', error);
      clearTimeout(safetyTimeout);
      cleanupExpansion(expandedCard);
      isAnimating = false;
    }
  }

  function cleanupExpansion(el: HTMLElement | null) {
    if (!el) return;

    const injectedClose = el.querySelector('.close-btn');
    if (injectedClose) injectedClose.remove();
    const injectedHandle = el.querySelector('.drag-handle');
    if (injectedHandle) injectedHandle.remove();

    if (placeholder && placeholder.parentNode) {
      placeholder.parentNode.insertBefore(el, placeholder);
      placeholder.remove();
    }

    el.classList.remove('expanded');
    el.style.transition = '';
    el.style.transform = '';
    el.style.opacity = '';
    el.style.clipPath = '';
    el.style.willChange = '';
    el.style.transformOrigin = '';
    el.setAttribute('tabindex', '0');
    el.setAttribute('role', 'button');

    overlay.dataset.open = 'false';
    document.body.style.overflow = '';
    pageWrapper.style.transition = '';
    pageWrapper.style.transform = '';
    pageWrapper.style.borderRadius = '';
    pageWrapper.style.overflow = '';
    pageWrapper.style.transformOrigin = '';
    pageWrapper.style.willChange = '';

    expandedCard = null;
    closeBtnEl = null;
    handleEl = null;
    placeholder = null;
    savedSourceRect = null;
  }

  // --- SWIPE-TO-DISMISS ---
  let isDragging = false;
  let dragStartY = 0;
  let dragCurrentY = 0;
  let dragStartTime = 0;
  const CLOSE_THRESHOLD = 0.25;
  const VELOCITY_THRESHOLD = 0.5;

  function applyDragVisuals(deltaY: number) {
    if (!expandedCard) return;
    const height = expandedCard.offsetHeight;
    if (deltaY < 0) {
      const damped = Math.sqrt(Math.abs(deltaY)) * 3;
      dragCurrentY = -damped;
      expandedCard.style.transform = `translateY(${-damped}px)`;
    } else {
      dragCurrentY = deltaY;
      expandedCard.style.transform = `translateY(${deltaY}px)`;
      const percent = Math.min(deltaY / height, 1);
      backdrop.style.opacity = String(Math.max(0, 1 - percent * 1.5));
      expandedCard.style.borderRadius = `${Math.min(percent * 80, 20)}px`;
      const pageScale = PAGE_SCALE + (1 - PAGE_SCALE) * percent;
      pageWrapper.style.transition = 'none';
      pageWrapper.style.transform = `scale(${pageScale})`;
      pageWrapper.style.borderRadius = `${Math.max(0, 12 * (1 - percent))}px`;
    }
  }

  function finishDrag() {
    if (!expandedCard) return;
    const height = expandedCard.offsetHeight;
    const percentDragged = dragCurrentY / height;
    const timeTaken = Date.now() - dragStartTime;
    const velocity = timeTaken > 0 ? dragCurrentY / timeTaken : 0;
    if (percentDragged > CLOSE_THRESHOLD || velocity > VELOCITY_THRESHOLD) {
      expandedCard.style.transition = 'none';
      expandedCard.style.transform = '';
      expandedCard.style.borderRadius = '';
      close();
    } else {
      snapBack();
    }
    dragCurrentY = 0;
  }

  function snapBack() {
    if (!expandedCard) return;
    expandedCard.style.transition = `transform ${DURATION}ms ${IOS_EASE}, border-radius ${DURATION}ms ${IOS_EASE}`;
    expandedCard.style.transform = '';
    expandedCard.style.borderRadius = '';
    backdrop.style.transition = `opacity ${DURATION}ms ${IOS_EASE}`;
    backdrop.style.opacity = '1';
    pageWrapper.style.transition = `transform ${DURATION}ms ${IOS_EASE}, border-radius ${DURATION}ms ${IOS_EASE}`;
    pageWrapper.style.transform = `scale(${PAGE_SCALE})`;
    pageWrapper.style.borderRadius = '12px';
    const done = (e: TransitionEvent) => {
      if (e.target !== expandedCard || e.propertyName !== 'transform') return;
      expandedCard!.removeEventListener('transitionend', done);
      expandedCard!.style.transition = '';
      pageWrapper.style.transition = '';
    };
    expandedCard.addEventListener('transitionend', done);
  }

  // Touch events for swipe
  document.addEventListener('touchstart', (e) => {
    if (isAnimating || overlay.dataset.open !== 'true' || !expandedCard) return;
    const target = e.target as HTMLElement;
    if (!expandedCard.contains(target)) return;
    if (target.closest('.close-btn')) return;
    dragStartY = e.touches[0].clientY;
    dragStartTime = Date.now();
    dragCurrentY = 0;
    isDragging = true;
    expandedCard.classList.add('dragging');
  }, { passive: true });

  document.addEventListener('touchmove', (e) => {
    if (!isDragging) return;
    const currentY = e.touches[0].clientY;
    const deltaY = currentY - dragStartY;
    if (Math.abs(deltaY) > 5) {
      e.preventDefault();
      applyDragVisuals(deltaY);
    }
  }, { passive: false });

  document.addEventListener('touchend', () => {
    if (!isDragging) return;
    isDragging = false;
    if (expandedCard) expandedCard.classList.remove('dragging');
    finishDrag();
  }, { passive: true });

  // Event listeners
  document.querySelectorAll('.movie-card').forEach(cardEl => {
    cardEl.addEventListener('click', () => {
      if (cardEl.classList.contains('expanded')) return;
      open(parseInt(cardEl.dataset.cardIndex!, 10), cardEl as HTMLElement);
    });
    cardEl.addEventListener('keydown', (e) => {
      if (e.key === 'Enter' || e.key === ' ') {
        e.preventDefault();
        if (cardEl.classList.contains('expanded')) return;
        open(parseInt(cardEl.dataset.cardIndex!, 10), cardEl as HTMLElement);
      }
    });
  });

  overlay.addEventListener('click', (e) => {
    if ((e.target as HTMLElement).closest('.close-btn')) close();
  });
  backdrop.addEventListener('click', close);
  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape' && overlay.dataset.open === 'true') close();
  });
</script>

<style>
  /* PAGE */
  .page-wrapper {
    background: var(--bg-body);
    min-height: 100vh;
  }

  .demo-page {
    max-width: 900px;
    margin: 0 auto;
    padding: 0 16px 60px;
  }

  .page-header {
    padding: 24px 0 32px;
  }

  .page-header h1 {
    font-family: 'Barlow Condensed', sans-serif;
    font-weight: 600;
    font-size: 28px;
    letter-spacing: -0.01em;
    color: var(--text-primary);
    margin: 0 0 6px;
  }

  .page-header p {
    font-size: 14px;
    color: var(--text-secondary);
    margin: 0;
  }

  /* GRID */
  .card-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 20px;
  }

  @media (min-width: 580px) {
    .card-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  :global(.card-placeholder) {
    border-radius: 16px;
  }

  /* CARD (COLLAPSED) */
  .movie-card {
    position: relative;
    aspect-ratio: 4 / 3;
    border-radius: 16px;
    overflow: hidden;
    cursor: pointer;
    -webkit-tap-highlight-color: transparent;
    transition: transform 0.15s ease;
    outline: none;
    box-shadow:
      0 2px 8px rgba(0, 0, 0, 0.25),
      0 8px 24px rgba(0, 0, 0, 0.15);
  }

  @media (hover: hover) {
    .movie-card:not(.expanded):hover {
      transform: scale(1.02);
    }
  }

  .movie-card:not(.expanded):active {
    transform: scale(0.98);
    transition-duration: 0.1s;
  }

  .movie-card:not(.expanded):focus-visible {
    box-shadow: 0 0 0 3px var(--accent);
  }

  .card-img {
    position: absolute;
    inset: -1px;
    width: calc(100% + 2px);
    height: calc(100% + 2px);
    object-fit: cover;
  }

  /* CARD (EXPANDED) - Mobile bottom drawer with 24px top radius */
  .movie-card.expanded {
    position: fixed;
    inset: auto 0 0 0;
    max-height: calc(100svh - env(safe-area-inset-top, 0px) - 20px);
    border-radius: 24px 24px 0 0;
    clip-path: inset(0 round 24px 24px 0 0);
    cursor: default;
    box-shadow: none;
    z-index: 1;
    transition: none;
  }

  /* DEMO NAV */
  .demo-nav {
    position: sticky;
    top: 0;
    z-index: 10;
    display: flex;
    gap: 8px;
    padding: 12px 16px;
    background: var(--bg-body);
    border-bottom: 1px solid var(--border-color);
    overflow-x: auto;
  }

  .demo-nav a {
    padding: 6px 12px;
    font-size: 13px;
    font-weight: 500;
    color: var(--text-secondary);
    text-decoration: none;
    border-radius: 6px;
    white-space: nowrap;
    transition: background 0.15s, color 0.15s;
  }

  .demo-nav a:hover {
    background: var(--bg-movie);
    color: var(--text-primary);
  }

  /* OVERLAY */
  .overlay {
    position: fixed;
    inset: 0;
    z-index: 1000;
    pointer-events: none;
  }

  .overlay[data-open="true"] {
    pointer-events: auto;
  }

  .overlay[data-open="false"] .backdrop {
    visibility: hidden;
  }

  .backdrop {
    position: absolute;
    inset: 0;
    background: rgba(0, 0, 0, 0.5);
    opacity: 0;
  }

  /* CLOSE BUTTON */
  :global(.close-btn) {
    position: absolute;
    top: 12px;
    right: 12px;
    z-index: 20;
    width: 32px;
    height: 32px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(0, 0, 0, 0.45);
    backdrop-filter: blur(8px);
    -webkit-backdrop-filter: blur(8px);
    border: none;
    border-radius: 50%;
    color: #fff;
    cursor: pointer;
    transition: background 0.15s, transform 0.1s;
  }

  @media (hover: hover) {
    :global(.close-btn:hover) { background: rgba(0, 0, 0, 0.7); }
  }

  :global(.close-btn:active) { transform: scale(0.9); }

  /* DRAG HANDLE */
  :global(.drag-handle) {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    z-index: 20;
    display: flex;
    justify-content: center;
    padding: 8px 0;
    cursor: grab;
    touch-action: none;
  }

  :global(.handle-pill) {
    width: 48px;
    height: 5px;
    border-radius: 3px;
    background: rgba(255, 255, 255, 0.7);
    box-shadow: 0 1px 4px rgba(0, 0, 0, 0.3);
  }

  /* DRAGGING STATE */
  .movie-card.dragging {
    transition: none !important;
  }

  /* REDUCED MOTION */
  @media (prefers-reduced-motion: reduce) {
    .movie-card, .backdrop, .page-wrapper { transition: none !important; }
    .movie-card:hover, .movie-card:active { transform: none; }
  }
</style>
