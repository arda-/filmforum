---
import Layout from '../../layouts/Layout.astro';
import Button from '../../components/Button.astro';
---

<Layout title="Button">
  <div class="demo-container">
    <h1>Button</h1>
    <p class="subtitle">Displays a button or a component that looks like a button.</p>

    <section class="demo-section">
      <h2>Installation</h2>
      <p>Copy and paste the following code into your project.</p>
      <pre><code>import Button from '@/components/Button.astro'</code></pre>
    </section>

    <section class="demo-section">
      <h2>Usage</h2>
      <pre><code>&lt;Button variant="primary"&gt;Click me&lt;/Button&gt;</code></pre>
    </section>

    <section class="demo-section">
      <h2>Examples</h2>

      <div class="example">
        <h3>Primary</h3>
        <Button variant="primary">Primary</Button>
      </div>

      <div class="example">
        <h3>Secondary</h3>
        <Button variant="secondary">Secondary</Button>
      </div>

      <div class="example">
        <h3>Danger</h3>
        <Button variant="danger">Delete</Button>
      </div>

      <div class="example">
        <h3>Disabled</h3>
        <Button variant="primary" disabled>Disabled</Button>
      </div>
    </section>

    <section class="demo-section">
      <h2>API Reference</h2>
      <table>
        <thead>
          <tr>
            <th>Prop</th>
            <th>Type</th>
            <th>Default</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><code>variant</code></td>
            <td><code>"primary" | "secondary" | "danger"</code></td>
            <td><code>"primary"</code></td>
          </tr>
          <tr>
            <td><code>type</code></td>
            <td><code>"button" | "submit" | "reset"</code></td>
            <td><code>"button"</code></td>
          </tr>
          <tr>
            <td><code>disabled</code></td>
            <td><code>boolean</code></td>
            <td><code>false</code></td>
          </tr>
          <tr>
            <td><code>form</code></td>
            <td><code>string</code></td>
            <td>â€”</td>
          </tr>
        </tbody>
      </table>
    </section>
  </div>
</Layout>

<style>
  .demo-container {
    max-width: 900px;
    margin: 0 auto;
    padding: 40px 20px;
  }

  h1 {
    font-size: 32px;
    font-weight: 700;
    color: var(--text-primary);
    margin-bottom: 8px;
  }

  .subtitle {
    font-size: 16px;
    color: var(--text-secondary);
    margin-bottom: 48px;
  }

  .demo-section {
    margin-bottom: 48px;
  }

  .demo-section h2 {
    font-size: 20px;
    font-weight: 600;
    color: var(--text-primary);
    margin-bottom: 16px;
  }

  .demo-section p {
    font-size: 14px;
    color: var(--text-secondary);
    margin-bottom: 16px;
  }

  pre {
    background: var(--bg-movie);
    border: 1px solid var(--bg-movie-hover);
    border-radius: 6px;
    padding: 12px 16px;
    overflow-x: auto;
    margin-bottom: 16px;
  }

  code {
    font-family: 'IBM Plex Mono', monospace;
    font-size: 13px;
    color: var(--text-primary);
  }

  .example {
    margin-bottom: 24px;
  }

  .example h3 {
    font-size: 14px;
    font-weight: 500;
    color: var(--text-secondary);
    margin-bottom: 8px;
  }

  table {
    width: 100%;
    border-collapse: collapse;
    margin-top: 16px;
  }

  th, td {
    padding: 12px;
    text-align: left;
    border-bottom: 1px solid var(--bg-movie);
    font-size: 13px;
  }

  th {
    background: var(--bg-movie);
    font-weight: 600;
    color: var(--text-primary);
  }

  td {
    color: var(--text-secondary);
  }

  code {
    background: var(--bg-body);
    padding: 2px 6px;
    border-radius: 3px;
  }
</style>
