    </header>

    <div class="card-grid">
      {movies.map((movie, i) => (
        <article class="movie-card" data-card-index={i} tabindex="0" role="button" aria-label={`View ${movie.title}`}>
          <img src={movie.poster} alt={movie.title} class="card-img" loading="lazy" />
          <div class="card-blur"></div>
          <div class="card-content">
            <span class="card-badge">{movie.badge}</span>
            <div class="card-info">
              <span class="card-label">{movie.label}</span>
              <h2 class="card-title">{movie.title}</h2>
              <p class="card-meta">{movie.director} 路 {movie.year} 路 {movie.runtime}</p>
            </div>
          </div>
        </article>
      ))}
    </div>
  </div>

  <!-- Expansion overlay (hidden by default) -->
  <div class="expansion-overlay" id="expansion-overlay" data-open="false">
    <div class="expansion-backdrop" id="expansion-backdrop"></div>
    <div class="expansion-card" id="expansion-card" role="dialog" aria-modal="true">
