              Get Tickets
            </button>
            <button class="action-btn action-secondary">
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none"><rect x="3" y="4" width="18" height="18" rx="2" stroke="currentColor" stroke-width="2"/><path d="M16 2v4M8 2v4M3 10h18" stroke="currentColor" stroke-width="2" stroke-linecap="round"/></svg>
              Add to Calendar
            </button>
          </div>

          <div class="expansion-showtimes" id="expansion-showtimes">
            <span class="showtimes-label">Upcoming Showtimes</span>
            <div class="showtimes-list" id="expansion-showtimes-list"></div>
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>

<script define:vars={{ moviesJson: JSON.stringify(movies) }}>
  const IOS_EASE = 'cubic-bezier(0.32, 0.72, 0, 1)';
  const DURATION = 400;
  const PAGE_SCALE = 0.94;
  const movieData = JSON.parse(moviesJson);

  const overlay = document.getElementById('expansion-overlay');
  const backdrop = document.getElementById('expansion-backdrop');
  const card = document.getElementById('expansion-card');
  const scroll = document.getElementById('expansion-scroll');
  const body = document.getElementById('expansion-body');
  const closeBtn = document.getElementById('expansion-close');
  const pageWrapper = document.getElementById('page-wrapper');
  const heroEl = document.getElementById('expansion-hero');
  const heroContent = heroEl.querySelector('.expansion-hero-content');

  let isAnimating = false;
  let sourceEl = null;
  let sourceRect = null;

  function populate(movie) {
    document.getElementById('expansion-img').src = movie.poster;
    document.getElementById('expansion-img').alt = movie.title;
    document.getElementById('expansion-badge').textContent = movie.badge;
    document.getElementById('expansion-label').textContent = movie.label;
    document.getElementById('expansion-title').textContent = movie.title;
    document.getElementById('expansion-meta').textContent =
      `${movie.director} · ${movie.year} · ${movie.runtime}`;
    document.getElementById('expansion-description').textContent = movie.description;
    document.getElementById('expansion-cast-names').textContent = movie.actors;

    const list = document.getElementById('expansion-showtimes-list');
    list.innerHTML = movie.showtimes
      .map(t => `<span class="showtime-chip">${t}</span>`)
      .join('');
  }

  function setPageOrigin() {
    const rect = pageWrapper.getBoundingClientRect();
    const originY = window.innerHeight / 2 - rect.top;
    pageWrapper.style.transformOrigin = `center ${originY}px`;
  }

  // --- FLIP OPEN (clip-path approach) ---
  function open(index, el) {
    if (isAnimating) return;
    isAnimating = true;
    sourceEl = el;
    sourceRect = el.getBoundingClientRect();

    populate(movieData[index]);
    scroll.scrollTop = 0;

    const first = sourceRect;
    el.style.opacity = '0';

    // Show overlay — body and hero text invisible during FLIP
    overlay.dataset.open = 'true';
    document.body.style.overflow = 'hidden';
    scroll.style.overflowY = 'hidden';
    body.style.opacity = '0';
    heroContent.style.opacity = '0';
    closeBtn.style.opacity = '0';

    // Scale page down (Apple effect)
    setPageOrigin();
    pageWrapper.style.transition = `transform ${DURATION}ms ${IOS_EASE}, border-radius ${DURATION}ms ${IOS_EASE}`;
    pageWrapper.style.transform = `scale(${PAGE_SCALE})`;
    pageWrapper.style.borderRadius = '12px';
    pageWrapper.style.overflow = 'hidden';

    // Prepare card for measurement (no clip, no transform)
    card.style.transition = 'none';
    card.style.clipPath = 'none';
    card.style.transform = 'none';
    card.style.transformOrigin = 'top left';
    card.style.borderRadius = '0';
    card.style.opacity = '1';
    void card.offsetHeight;

    // Measure full card and hero
    const cardRect = card.getBoundingClientRect();
    const heroRect = heroEl.getBoundingClientRect();
    const bodyClip = cardRect.bottom - heroRect.bottom;

    // Uniform width-based scale (hero 4:3 matches source card 4:3)
    const scale = first.width / cardRect.width;
    const dx = first.left - cardRect.left;
    const dy = first.top - cardRect.top;

    // INVERT: clip to hero-only, position at source card
    card.style.clipPath = `inset(0px 0px ${bodyClip}px 0px round 16px)`;
    card.style.transform = `translate(${dx}px, ${dy}px) scale(${scale})`;
    void card.offsetHeight;

    // PLAY: animate to final position, reveal body via clip
    const finalRound = window.innerWidth < 768 ? '0px' : '16px';
    card.style.transition = `transform ${DURATION}ms ${IOS_EASE}, clip-path ${DURATION}ms ${IOS_EASE}`;
    card.style.clipPath = `inset(0px 0px 0px 0px round ${finalRound})`;
    card.style.transform = 'translate(0px, 0px) scale(1)';

    // Body fades in with delay (progressive reveal during clip expansion)
    body.style.transition = `opacity ${Math.round(DURATION * 0.5)}ms ease-out ${Math.round(DURATION * 0.4)}ms`;
    body.style.opacity = '1';

    // Hero text fades in as card settles (avoids font-size mismatch click)
    heroContent.style.transition = `opacity ${Math.round(DURATION * 0.4)}ms ease-out ${Math.round(DURATION * 0.5)}ms`;
    heroContent.style.opacity = '1';
    closeBtn.style.transition = `opacity ${Math.round(DURATION * 0.35)}ms ease-out ${Math.round(DURATION * 0.6)}ms`;
    closeBtn.style.opacity = '1';

    // Backdrop
    backdrop.style.transition = `opacity ${DURATION}ms ${IOS_EASE}`;
    backdrop.style.opacity = '1';

    // Clean up after animation completes
    setTimeout(() => {
      card.style.transition = '';
      card.style.transform = '';
      card.style.clipPath = '';
      card.style.borderRadius = '';
      card.style.transformOrigin = '';
      body.style.transition = '';
      body.style.opacity = '';
      heroContent.style.transition = '';
      heroContent.style.opacity = '';
      closeBtn.style.transition = '';
      closeBtn.style.opacity = '';
      scroll.style.overflowY = '';
      pageWrapper.style.transition = '';
      isAnimating = false;
    }, DURATION + 80);
  }

  // --- FLIP CLOSE (clip-path approach) ---
  function close() {
    if (isAnimating) return;
    isAnimating = true;

    const el = sourceEl;
    if (!el) {
      overlay.dataset.open = 'false';
      document.body.style.overflow = '';
      resetPage();
      isAnimating = false;
      return;
    }

    // Scroll to top so hero is visible for FLIP
    scroll.scrollTop = 0;
    scroll.style.overflowY = 'hidden';

    // Prepare card for measurement
    card.style.transition = 'none';
    card.style.transformOrigin = 'top left';
    card.style.borderRadius = '0';
    void card.offsetHeight;

    // Measure from resting position
    const cardRect = card.getBoundingClientRect();
    const heroRect = heroEl.getBoundingClientRect();
    const bodyClip = cardRect.bottom - heroRect.bottom;
    const targetRect = sourceRect;
    const scale = targetRect.width / cardRect.width;
    const dx = targetRect.left - cardRect.left;
    const dy = targetRect.top - cardRect.top;

    // Set starting clip-path (full card visible, current state)
    const startRound = window.innerWidth < 768 ? '0px' : '16px';
    card.style.clipPath = `inset(0px 0px 0px 0px round ${startRound})`;
    void card.offsetHeight;

    // Animate: shrink to source, clip to hero-only
    card.style.transition = `transform ${DURATION}ms ${IOS_EASE}, clip-path ${DURATION}ms ${IOS_EASE}`;
    card.style.clipPath = `inset(0px 0px ${bodyClip}px 0px round 16px)`;
    card.style.transform = `translate(${dx}px, ${dy}px) scale(${scale})`;

    // Body and hero text fade out quickly
    body.style.transition = `opacity ${Math.round(DURATION * 0.35)}ms ease-in`;
    body.style.opacity = '0';
    heroContent.style.transition = `opacity ${Math.round(DURATION * 0.25)}ms ease-in`;
    heroContent.style.opacity = '0';
    closeBtn.style.transition = `opacity ${Math.round(DURATION * 0.2)}ms ease-in`;
    closeBtn.style.opacity = '0';

    // Backdrop
    backdrop.style.transition = `opacity ${DURATION}ms ${IOS_EASE}`;
    backdrop.style.opacity = '0';

    // Un-scale page simultaneously
    pageWrapper.style.transition = `transform ${DURATION}ms ${IOS_EASE}, border-radius ${DURATION}ms ${IOS_EASE}`;
    pageWrapper.style.transform = '';
    pageWrapper.style.borderRadius = '';

    setTimeout(() => {
      el.style.opacity = '';
      overlay.dataset.open = 'false';
      card.style.transition = '';
      card.style.transform = '';
      card.style.clipPath = '';
      card.style.borderRadius = '';
      card.style.transformOrigin = '';
      card.style.opacity = '';
      body.style.transition = '';
      body.style.opacity = '';
      heroContent.style.transition = '';
      heroContent.style.opacity = '';
      closeBtn.style.transition = '';
      closeBtn.style.opacity = '';
      scroll.style.overflowY = '';
      document.body.style.overflow = '';
      resetPage();
      sourceEl = null;
      sourceRect = null;
      isAnimating = false;
    }, DURATION);
  }

  function resetPage() {
    pageWrapper.style.transition = '';
    pageWrapper.style.transform = '';
    pageWrapper.style.borderRadius = '';
    pageWrapper.style.overflow = '';
    pageWrapper.style.transformOrigin = '';
  }

  // --- SWIPE-TO-DISMISS ---
  let isDragging = false;
  let isTracking = false;
  let dragStartY = 0;
  let dragCurrentY = 0;
  let dragStartTime = 0;
  const CLOSE_THRESHOLD = 0.25;
  const VELOCITY_THRESHOLD = 0.5;

  function applyDragVisuals(deltaY) {
    const height = card.offsetHeight;
    if (deltaY < 0) {
      const damped = Math.sqrt(Math.abs(deltaY)) * 3;
      dragCurrentY = -damped;
      card.style.transform = `translateY(${-damped}px)`;
    } else {
      dragCurrentY = deltaY;
      card.style.transform = `translateY(${deltaY}px)`;
      const percent = Math.min(deltaY / height, 1);
      backdrop.style.opacity = String(Math.max(0, 1 - percent * 1.5));
      card.style.borderRadius = `${Math.min(percent * 80, 20)}px`;
      const pageScale = PAGE_SCALE + (1 - PAGE_SCALE) * percent;
      pageWrapper.style.transition = 'none';
      pageWrapper.style.transform = `scale(${pageScale})`;
      pageWrapper.style.borderRadius = `${Math.max(0, 12 * (1 - percent))}px`;
    }
  }

  // Touch events (mobile)
  scroll.addEventListener('touchstart', (e) => {
    if (isAnimating || overlay.dataset.open !== 'true') return;
    dragStartY = e.touches[0].clientY;
    dragStartTime = Date.now();
    dragCurrentY = 0;
    isTracking = true;
    isDragging = false;
  }, { passive: true });

  scroll.addEventListener('touchmove', (e) => {
    if (!isTracking) return;
    const currentY = e.touches[0].clientY;
    const deltaY = currentY - dragStartY;

    if (!isDragging) {
      if (Math.abs(deltaY) < 8) return;

      if (deltaY > 0 && scroll.scrollTop <= 0) {
        isDragging = true;
        card.classList.add('dragging');
      } else {
        isTracking = false;
        return;
      }
    }

    e.preventDefault();
    applyDragVisuals(deltaY);
  }, { passive: false });

  scroll.addEventListener('touchend', () => {
    const wasDragging = isDragging;
    isTracking = false;
    isDragging = false;
    if (!wasDragging) return;

    card.classList.remove('dragging');
    finishDrag();
  }, { passive: true });

  // Pointer events (desktop — hero handle)
  const hero = heroEl;
  hero.addEventListener('pointerdown', (e) => {
    if (isAnimating || overlay.dataset.open !== 'true') return;
    if (scroll && scroll.scrollTop > 0) return;

    isDragging = true;
    dragStartY = e.clientY;
    dragCurrentY = 0;
    dragStartTime = Date.now();
    card.classList.add('dragging');
    card.setPointerCapture(e.pointerId);
    e.preventDefault();
  });

  document.addEventListener('pointermove', (e) => {
    if (!isDragging || isTracking) return;
    const deltaY = e.clientY - dragStartY;
    applyDragVisuals(deltaY);
  });

  document.addEventListener('pointerup', (e) => {
    if (!isDragging || isTracking) return;
    isDragging = false;
    card.classList.remove('dragging');
    card.releasePointerCapture(e.pointerId);
    finishDrag();
  });

  function finishDrag() {
    const height = card.offsetHeight;
    const percentDragged = dragCurrentY / height;
    const timeTaken = Date.now() - dragStartTime;
    const velocity = timeTaken > 0 ? dragCurrentY / timeTaken : 0;

    if (percentDragged > CLOSE_THRESHOLD || velocity > VELOCITY_THRESHOLD) {
      card.style.transition = 'none';
      card.style.transform = '';
      card.style.borderRadius = '';
      close();
    } else {
      snapBack();
    }
    dragCurrentY = 0;
  }

  function snapBack() {
    card.style.transition = `transform ${DURATION}ms ${IOS_EASE}, border-radius ${DURATION}ms ${IOS_EASE}`;
    card.style.transform = '';
    card.style.borderRadius = '';
    backdrop.style.transition = `opacity ${DURATION}ms ${IOS_EASE}`;
    backdrop.style.opacity = '1';
    pageWrapper.style.transition = `transform ${DURATION}ms ${IOS_EASE}, border-radius ${DURATION}ms ${IOS_EASE}`;
    pageWrapper.style.transform = `scale(${PAGE_SCALE})`;
    pageWrapper.style.borderRadius = '12px';
    setTimeout(() => {
      card.style.transition = '';
      pageWrapper.style.transition = '';
    }, DURATION);
  }

  // --- Event listeners ---

  document.querySelectorAll('.movie-card').forEach(cardEl => {
    cardEl.addEventListener('click', () => {
      const index = parseInt(cardEl.dataset.cardIndex, 10);
      open(index, cardEl);
    });
    cardEl.addEventListener('keydown', (e) => {
      if (e.key === 'Enter' || e.key === ' ') {
        e.preventDefault();
        const index = parseInt(cardEl.dataset.cardIndex, 10);
        open(index, cardEl);
      }
    });
  });

  closeBtn.addEventListener('click', close);
  backdrop.addEventListener('click', close);
  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape' && overlay.dataset.open === 'true') {
      close();
    }
  });
</script>

<style>
  /* =============================================
     PAGE LAYOUT
     ============================================= */

  .page-wrapper {
    background: var(--bg-body);
    min-height: 100vh;
    will-change: transform;
  }

  .apple-card-page {
    max-width: 900px;
    margin: 0 auto;
    padding: 0 16px 60px;
  }

  .page-header {
    padding: 24px 0 32px;
  }

  .page-header h1 {
    font-family: 'Barlow Condensed', sans-serif;
    font-weight: 600;
    font-size: 28px;
    letter-spacing: -0.01em;
    color: var(--text-primary);
    margin: 0 0 6px;
  }

  .page-header p {
    font-size: 14px;
    color: var(--text-secondary);
    margin: 0;
  }

  /* =============================================
     CARD GRID
     ============================================= */

  .card-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 20px;
  }

  @media (min-width: 580px) {
    .card-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  /* =============================================
     MOVIE CARD (COLLAPSED)
     ============================================= */

  .movie-card {
    position: relative;
    aspect-ratio: 4 / 3;
    border-radius: 16px;
    overflow: hidden;
    cursor: pointer;
    -webkit-tap-highlight-color: transparent;
    will-change: transform, opacity;
    transition: transform 0.2s ease;
    outline: none;
  }

  .movie-card:hover {
    transform: scale(1.02);
  }

  .movie-card:active {
    transform: scale(0.98);
    transition-duration: 0.1s;
  }

  .movie-card:focus-visible {
    box-shadow: 0 0 0 3px var(--accent);
  }

  .card-img {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  /* Progressive blur over the image (above scrim) */
  .card-blur {
    position: absolute;
    inset: 0;
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
    mask-image: linear-gradient(to top, black 0%, black 20%, transparent 55%);
    -webkit-mask-image: linear-gradient(to top, black 0%, black 20%, transparent 55%);
    pointer-events: none;
    z-index: 2;
  }

  /* Dark scrim under the blur (darken blend, like the blur demo) */
  .card-scrim {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      to top,
      rgb(10, 10, 10) 0%,
      rgba(10, 10, 10, 0.6) 30%,
      transparent 60%
    );
    mix-blend-mode: darken;
    pointer-events: none;
    z-index: 1;
  }

  /* Content overlay on the card */
  .card-content {
    position: absolute;
    inset: 0;
    z-index: 3;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    padding: 16px;
    pointer-events: none;
  }

  .card-badge {
    align-self: flex-start;
    font-family: 'Barlow Semi Condensed', sans-serif;
    font-weight: 600;
    font-size: 11px;
    letter-spacing: 0.08em;
    color: #fff;
    background: rgba(0, 0, 0, 0.55);
    backdrop-filter: blur(8px);
    -webkit-backdrop-filter: blur(8px);
