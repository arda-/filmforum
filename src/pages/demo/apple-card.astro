---

<Layout title="Apple Card Expansion">
  <div class="page-wrapper" id="page-wrapper">
  <div class="apple-card-page" id="page-content">
    <header class="page-header">
      <h1>Apple Card Expansion</h1>
      <p>App Store-style card with FLIP animation. Tap a card to expand.</p>
    </header>

    <div class="card-grid">
      {movies.map((movie, i) => (
        <article class="movie-card" data-card-index={i} tabindex="0" role="button" aria-label={`View ${movie.title}`}>
          <img src={movie.poster} alt={movie.title} class="card-img" loading="lazy" />
          <div class="card-scrim"></div>
          <div class="card-blur"></div>
          <div class="card-content">
            <span class="card-badge">{movie.badge}</span>
            <div class="card-info">
              <span class="card-label">{movie.label}</span>
              <h2 class="card-title">{movie.title}</h2>
              <p class="card-meta">{movie.director} · {movie.year} · {movie.runtime}</p>
            </div>
          </div>
        </article>
      ))}
    </div>
  </div>
  </div>

  <!-- Expansion overlay (hidden by default) -->
  <div class="expansion-overlay" id="expansion-overlay" data-open="false">
    <div class="expansion-backdrop" id="expansion-backdrop"></div>
    <div class="expansion-card" id="expansion-card" role="dialog" aria-modal="true">
      <div class="expansion-handle"><div class="expansion-handle-pill"></div></div>
      <button class="expansion-close" id="expansion-close" aria-label="Close">
        <svg width="14" height="14" viewBox="0 0 16 16" fill="none">
          <path d="M4 4l8 8M12 4l-8 8" stroke="currentColor" stroke-width="2.5" stroke-linecap="round"/>
        </svg>
      </button>
      <div class="expansion-scroll" id="expansion-scroll">
        <!-- Hero: full-bleed poster + blur + text -->
        <div class="expansion-hero" id="expansion-hero">
          <img class="expansion-img" id="expansion-img" src="" alt="" />
          <div class="expansion-scrim"></div>
          <div class="expansion-blur"></div>
          <div class="expansion-hero-content">
            <span class="expansion-badge" id="expansion-badge"></span>
            <span class="expansion-label" id="expansion-label"></span>
            <h2 class="expansion-title" id="expansion-title"></h2>
            <p class="expansion-meta" id="expansion-meta"></p>
          </div>
        </div>

        <!-- Body content (below the fold) -->
        <div class="expansion-body" id="expansion-body">
          <p class="expansion-description" id="expansion-description"></p>

          <div class="expansion-cast" id="expansion-cast">
            <span class="cast-label">Starring</span>
            <p class="cast-names" id="expansion-cast-names"></p>
          </div>

          <div class="expansion-actions">
            <button class="action-btn action-primary">
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none"><path d="M15.5 5l-7 7 7 7" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" transform="rotate(180 12 12)"/></svg>
              Get Tickets
            </button>
            <button class="action-btn action-secondary">
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none"><rect x="3" y="4" width="18" height="18" rx="2" stroke="currentColor" stroke-width="2"/><path d="M16 2v4M8 2v4M3 10h18" stroke="currentColor" stroke-width="2" stroke-linecap="round"/></svg>
              Add to Calendar
            </button>
          </div>

          <div class="expansion-showtimes" id="expansion-showtimes">
            <span class="showtimes-label">Upcoming Showtimes</span>
            <div class="showtimes-list" id="expansion-showtimes-list"></div>
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>

<script define:vars={{ moviesJson: JSON.stringify(movies) }}>
  const IOS_EASE = 'cubic-bezier(0.32, 0.72, 0, 1)';
  const DURATION = 400;
  const PAGE_SCALE = 0.94;
  const movieData = JSON.parse(moviesJson);
  const prefersReducedMotion = window.matchMedia('(prefers-reduced-motion: reduce)').matches;

  const overlay = document.getElementById('expansion-overlay');
  const backdrop = document.getElementById('expansion-backdrop');
  const card = document.getElementById('expansion-card');
  const scroll = document.getElementById('expansion-scroll');
  const body = document.getElementById('expansion-body');
  const closeBtn = document.getElementById('expansion-close');
  const pageWrapper = document.getElementById('page-wrapper');
  const heroEl = document.getElementById('expansion-hero');

  // Guard against missing DOM elements
  if (!overlay || !backdrop || !card || !scroll || !body || !closeBtn || !pageWrapper || !heroEl) {
    console.error('Required DOM elements not found');
    return;
  }

  let isAnimating = false;
  let sourceEl = null;
  let sourceRect = null;

  function populate(movie) {
    const img = document.getElementById('expansion-img');
    const badge = document.getElementById('expansion-badge');
    const label = document.getElementById('expansion-label');
    const title = document.getElementById('expansion-title');
    const meta = document.getElementById('expansion-meta');
    const description = document.getElementById('expansion-description');
    const castNames = document.getElementById('expansion-cast-names');
    const list = document.getElementById('expansion-showtimes-list');

    if (!img || !badge || !label || !title || !meta || !description || !castNames || !list) {
      console.error('Missing elements in populate()');
      return;
    }

    img.src = movie.poster;
    img.alt = movie.title;
    badge.textContent = movie.badge;
    label.textContent = movie.label;
    title.textContent = movie.title;
    meta.textContent = `${movie.director} · ${movie.year} · ${movie.runtime}`;
    description.textContent = movie.description;
    castNames.textContent = movie.actors;

    // Clear existing chips
    list.innerHTML = '';
    // Create chips safely without innerHTML (prevents XSS if pattern is reused with dynamic data)
    movie.showtimes.forEach(time => {
      const chip = document.createElement('span');
      chip.className = 'showtime-chip';
      chip.textContent = time;
      list.appendChild(chip);
    });
  }

  function setPageOrigin() {
    const rect = pageWrapper.getBoundingClientRect();
    const originY = window.innerHeight / 2 - rect.top;
    pageWrapper.style.transformOrigin = `center ${originY}px`;
  }

  // --- FLIP OPEN (clip-path approach) ---
  function open(index, el) {
    if (isAnimating) return;
    isAnimating = true;

    // Safety timeout: reset isAnimating if transitionend doesn't fire
    const safetyTimeout = setTimeout(() => {
      if (isAnimating) {
        console.warn('Animation cleanup timeout reached, resetting isAnimating flag');
        isAnimating = false;
      }
    }, DURATION * 3);

    try {
      sourceEl = el;
      // Hide source card FIRST, then reset to rest state for measurement.
      // Order matters: hiding before resetting transform prevents the visible
      // snap from :active(0.98) or :hover(1.02) → 1.0
      el.style.transition = 'none';
      el.style.opacity = '0';
      el.style.transform = 'none';
      void el.offsetHeight;
      sourceRect = el.getBoundingClientRect();

    populate(movieData[index]);
    scroll.scrollTop = 0;

    // Reduced motion: skip FLIP animation, show instantly
    if (prefersReducedMotion) {
      clearTimeout(safetyTimeout);
      overlay.dataset.open = 'true';
      document.body.style.overflow = 'hidden';
      isAnimating = false;
      return;
    }

    const first = sourceRect;

    // Keep card invisible until FLIP inverse is set (prevents flash at resting position)
    card.style.opacity = '0';
    overlay.dataset.open = 'true';
    document.body.style.overflow = 'hidden';
    scroll.style.overflowY = 'hidden';
    body.style.opacity = '0';

    // Scale page down (Apple effect)
    setPageOrigin();
    pageWrapper.style.willChange = 'transform';
    pageWrapper.style.transition = `transform ${DURATION}ms ${IOS_EASE}, border-radius ${DURATION}ms ${IOS_EASE}`;
    pageWrapper.style.transform = `scale(${PAGE_SCALE})`;
    pageWrapper.style.borderRadius = '12px';
    pageWrapper.style.overflow = 'hidden';

    // Prepare card for measurement (no clip, no transform, still invisible)
    card.style.willChange = 'transform, clip-path';
    card.style.transition = 'none';
    card.style.clipPath = 'none';
    card.style.transform = 'none';
    card.style.transformOrigin = 'top left';
    card.style.borderRadius = '0';
    void card.offsetHeight;

    // Measure full card and hero
    const cardRect = card.getBoundingClientRect();
    const heroRect = heroEl.getBoundingClientRect();
    const bodyClip = cardRect.bottom - heroRect.bottom;

    // Uniform width-based scale (hero 4:3 matches source card 4:3)
    const scale = first.width / cardRect.width;
    const dx = first.left - cardRect.left;
    const dy = first.top - cardRect.top;

    // INVERT: clip to hero-only, position at source card — now reveal
    card.style.clipPath = `inset(0px 0px ${bodyClip}px 0px round 16px)`;
    card.style.transform = `translate(${dx}px, ${dy}px) scale(${scale})`;
    card.style.opacity = '1';
    void card.offsetHeight;

    // PLAY: animate to final position, reveal body via clip
    const finalRound = window.innerWidth < 640 ? '16px 16px 0px 0px' : '16px';
    card.style.transition = `transform ${DURATION}ms ${IOS_EASE}, clip-path ${DURATION}ms ${IOS_EASE}`;
    card.style.clipPath = `inset(0px 0px 0px 0px round ${finalRound})`;
    card.style.transform = 'translate(0px, 0px) scale(1)';

    // Body fades in with delay (progressive reveal during clip expansion)
    body.style.transition = `opacity ${Math.round(DURATION * 0.5)}ms ease-out ${Math.round(DURATION * 0.4)}ms`;
    body.style.opacity = '1';

    // Backdrop
    backdrop.style.transition = `opacity ${DURATION}ms ${IOS_EASE}`;
    backdrop.style.opacity = '1';

      // Clean up after animation completes — only clear transition and unlock scroll.
      // Keep transform, clipPath, transformOrigin, willChange intact to prevent
      // text re-rasterization. The close() function resets all of these.
      const handleOpenComplete = (e) => {
        if (e.target !== card || e.propertyName !== 'transform') return;
        card.removeEventListener('transitionend', handleOpenComplete);
        clearTimeout(safetyTimeout);

        card.style.transition = '';
        body.style.transition = '';
        body.style.opacity = '';
        scroll.style.overflowY = '';
        pageWrapper.style.transition = '';
        isAnimating = false;
      };
      card.addEventListener('transitionend', handleOpenComplete);
    } catch (error) {
      console.error('Error during open animation:', error);
      clearTimeout(safetyTimeout);
      isAnimating = false;
      // Attempt to clean up in case of error
      if (el) el.style.opacity = '';
      document.body.style.overflow = '';
      overlay.dataset.open = 'false';
    }
  }

  // --- FLIP CLOSE (clip-path approach) ---
  function close() {
    if (isAnimating) return;
    isAnimating = true;

    // Safety timeout: reset isAnimating if transitionend doesn't fire
    const safetyTimeout = setTimeout(() => {
      if (isAnimating) {
        console.warn('Animation cleanup timeout reached, resetting isAnimating flag');
        isAnimating = false;
      }
    }, DURATION * 3);

    try {
      const el = sourceEl;
      if (!el) {
        clearTimeout(safetyTimeout);
        overlay.dataset.open = 'false';
        document.body.style.overflow = '';
        resetPage();
        isAnimating = false;
        return;
      }

    // Reduced motion: close instantly
    if (prefersReducedMotion) {
      clearTimeout(safetyTimeout);
      overlay.dataset.open = 'false';
      document.body.style.overflow = '';
      sourceEl = null;
      sourceRect = null;
      isAnimating = false;
      return;
    }

    // Scroll to top so hero is visible for FLIP
    scroll.scrollTop = 0;
    scroll.style.overflowY = 'hidden';

    // Prepare card for measurement (clear translateZ(0) keepalive, set FLIP origin)
    card.style.willChange = 'transform, clip-path';
    pageWrapper.style.willChange = 'transform';
    card.style.transition = 'none';
    card.style.transform = 'none';
    card.style.transformOrigin = 'top left';
    card.style.borderRadius = '0';
    void card.offsetHeight;

    // Measure from resting position
    const cardRect = card.getBoundingClientRect();
    const heroRect = heroEl.getBoundingClientRect();
    const bodyClip = cardRect.bottom - heroRect.bottom;
    const targetRect = sourceRect;
    const scale = targetRect.width / cardRect.width;
    const dx = targetRect.left - cardRect.left;
    const dy = targetRect.top - cardRect.top;

    // Set starting clip-path (full card visible, current state)
    const startRound = window.innerWidth < 640 ? '16px 16px 0px 0px' : '16px';
    card.style.clipPath = `inset(0px 0px 0px 0px round ${startRound})`;
    void card.offsetHeight;

    // Animate: shrink to source, clip to hero-only
    card.style.transition = `transform ${DURATION}ms ${IOS_EASE}, clip-path ${DURATION}ms ${IOS_EASE}`;
    card.style.clipPath = `inset(0px 0px ${bodyClip}px 0px round 16px)`;
    card.style.transform = `translate(${dx}px, ${dy}px) scale(${scale})`;

    // Body fades out quickly
    body.style.transition = `opacity ${Math.round(DURATION * 0.35)}ms ease-in`;
    body.style.opacity = '0';

    // Backdrop
    backdrop.style.transition = `opacity ${DURATION}ms ${IOS_EASE}`;
    backdrop.style.opacity = '0';

    // Un-scale page simultaneously
    pageWrapper.style.transition = `transform ${DURATION}ms ${IOS_EASE}, border-radius ${DURATION}ms ${IOS_EASE}`;
    pageWrapper.style.transform = '';
    pageWrapper.style.borderRadius = '';

      const handleCloseComplete = (e) => {
        // Only handle transitionend from the card's transform (ignore child elements)
        if (e.target !== card || e.propertyName !== 'transform') return;
        card.removeEventListener('transitionend', handleCloseComplete);
        clearTimeout(safetyTimeout);

        // Restore source card: re-enable transitions BEFORE clearing transform
        // so any :hover scale animates smoothly instead of snapping
        el.style.transition = '';
        el.style.opacity = '';
        el.style.transform = '';
        overlay.dataset.open = 'false';
        card.style.transition = '';
        card.style.transform = '';
        card.style.clipPath = '';
        card.style.borderRadius = '';
        card.style.transformOrigin = '';
        card.style.opacity = '';
        card.style.willChange = '';
        body.style.transition = '';
        body.style.opacity = '';
        scroll.style.overflowY = '';
        document.body.style.overflow = '';
        pageWrapper.style.willChange = '';
        // Clear stale image so it doesn't flash when a new card opens
        const img = document.getElementById('expansion-img');
        if (img) img.src = '';
        resetPage();
        sourceEl = null;
        sourceRect = null;
        isAnimating = false;
      };
      card.addEventListener('transitionend', handleCloseComplete);
    } catch (error) {
      console.error('Error during close animation:', error);
      clearTimeout(safetyTimeout);
      isAnimating = false;
      // Attempt to clean up in case of error
      if (el) {
        el.style.transition = '';
        el.style.opacity = '';
        el.style.transform = '';
      }
      overlay.dataset.open = 'false';
      document.body.style.overflow = '';
      resetPage();
      sourceEl = null;
      sourceRect = null;
    }
  }

  function resetPage() {
    pageWrapper.style.transition = '';
    pageWrapper.style.transform = '';
    pageWrapper.style.borderRadius = '';
    pageWrapper.style.overflow = '';
    pageWrapper.style.transformOrigin = '';
  }

  // --- SWIPE-TO-DISMISS ---
  let isDragging = false;
  let isTracking = false;
  let dragStartY = 0;
  let dragCurrentY = 0;
  let dragStartTime = 0;
  const CLOSE_THRESHOLD = 0.25;
  const VELOCITY_THRESHOLD = 0.5;

  function applyDragVisuals(deltaY) {
    const height = card.offsetHeight;
    if (deltaY < 0) {
      const damped = Math.sqrt(Math.abs(deltaY)) * 3;
      dragCurrentY = -damped;
      card.style.transform = `translateY(${-damped}px)`;
    } else {
      dragCurrentY = deltaY;
      card.style.transform = `translateY(${deltaY}px)`;
      const percent = Math.min(deltaY / height, 1);
      backdrop.style.opacity = String(Math.max(0, 1 - percent * 1.5));
      card.style.borderRadius = `${Math.min(percent * 80, 20)}px`;
      const pageScale = PAGE_SCALE + (1 - PAGE_SCALE) * percent;
      pageWrapper.style.transition = 'none';
      pageWrapper.style.transform = `scale(${pageScale})`;
      pageWrapper.style.borderRadius = `${Math.max(0, 12 * (1 - percent))}px`;
    }
  }

  // Touch events (mobile)
  scroll.addEventListener('touchstart', (e) => {
    if (isAnimating || overlay.dataset.open !== 'true') return;
    dragStartY = e.touches[0].clientY;
    dragStartTime = Date.now();
    dragCurrentY = 0;
    isTracking = true;
    isDragging = false;
  }, { passive: true });

  scroll.addEventListener('touchmove', (e) => {
    if (!isTracking) return;
    const currentY = e.touches[0].clientY;
    const deltaY = currentY - dragStartY;

    if (!isDragging) {
      if (Math.abs(deltaY) < 8) return;

      if (deltaY > 0 && scroll.scrollTop <= 0) {
        isDragging = true;
        card.classList.add('dragging');
      } else {
        isTracking = false;
        return;
      }
    }

    e.preventDefault();
    applyDragVisuals(deltaY);
  }, { passive: false });

  scroll.addEventListener('touchend', () => {
    const wasDragging = isDragging;
    isTracking = false;
    isDragging = false;
    if (!wasDragging) return;

    card.classList.remove('dragging');
    finishDrag();
  }, { passive: true });

  // Pointer events (desktop — hero area, or drag handle)
  const hero = heroEl;
  const handleEl = document.querySelector('.expansion-handle');

  function startPointerDrag(e) {
    if (isAnimating || overlay.dataset.open !== 'true') return;
    if (scroll && scroll.scrollTop > 0) return;

    // Only prevent default for primary mouse button (left click) or touch/pen
    // This allows right-click context menus and doesn't interfere with text selection
    // unless actively initiating a drag
    if (e.button !== 0 && e.pointerType === 'mouse') return;

    isDragging = true;
    dragStartY = e.clientY;
    dragCurrentY = 0;
    dragStartTime = Date.now();
    card.classList.add('dragging');
    card.setPointerCapture(e.pointerId);
    // Prevent default only when we're actually starting a drag
    e.preventDefault();
  }

  hero.addEventListener('pointerdown', startPointerDrag);
  handleEl.addEventListener('pointerdown', startPointerDrag);

  document.addEventListener('pointermove', (e) => {
    if (!isDragging || isTracking) return;
    const deltaY = e.clientY - dragStartY;
    applyDragVisuals(deltaY);
  });

  document.addEventListener('pointerup', (e) => {
    if (!isDragging || isTracking) return;
    isDragging = false;
    card.classList.remove('dragging');
    card.releasePointerCapture(e.pointerId);
    finishDrag();
  });

  function finishDrag() {
    const height = card.offsetHeight;
    const percentDragged = dragCurrentY / height;
    const timeTaken = Date.now() - dragStartTime;
    const velocity = timeTaken > 0 ? dragCurrentY / timeTaken : 0;

    if (percentDragged > CLOSE_THRESHOLD || velocity > VELOCITY_THRESHOLD) {
      card.style.transition = 'none';
      card.style.transform = '';
      card.style.borderRadius = '';
      close();
    } else {
      snapBack();
    }
    dragCurrentY = 0;
  }

  function snapBack() {
    card.style.transition = `transform ${DURATION}ms ${IOS_EASE}, border-radius ${DURATION}ms ${IOS_EASE}`;
    card.style.transform = '';
    card.style.borderRadius = '';
    backdrop.style.transition = `opacity ${DURATION}ms ${IOS_EASE}`;
    backdrop.style.opacity = '1';
    pageWrapper.style.transition = `transform ${DURATION}ms ${IOS_EASE}, border-radius ${DURATION}ms ${IOS_EASE}`;
    pageWrapper.style.transform = `scale(${PAGE_SCALE})`;
    pageWrapper.style.borderRadius = '12px';

    const handleSnapBackComplete = (e) => {
      if (e.target !== card || e.propertyName !== 'transform') return;
      card.removeEventListener('transitionend', handleSnapBackComplete);

      card.style.transition = '';
      pageWrapper.style.transition = '';
    };
    card.addEventListener('transitionend', handleSnapBackComplete);
  }

  // --- Event listeners ---

  document.querySelectorAll('.movie-card').forEach(cardEl => {
    cardEl.addEventListener('click', () => {
      const index = parseInt(cardEl.dataset.cardIndex, 10);
      open(index, cardEl);
    });
    cardEl.addEventListener('keydown', (e) => {
      if (e.key === 'Enter' || e.key === ' ') {
        e.preventDefault();
        const index = parseInt(cardEl.dataset.cardIndex, 10);
        open(index, cardEl);
      }
    });
  });

  closeBtn.addEventListener('click', close);
  backdrop.addEventListener('click', close);
  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape' && overlay.dataset.open === 'true') {
      close();
