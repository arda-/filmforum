---
import Layout from '../../layouts/Layout.astro';
import AppleCardDemoNav from '../../components/AppleCardDemoNav.astro';
import { moviesWithMeta as movies } from '../../data/demo-movies';
---

<Layout title="Apple Card Expansion">
  <AppleCardDemoNav />
  <div class="page-wrapper" id="page-wrapper">
  <div class="apple-card-page" id="page-content">
    <header class="page-header">
      <h1>Apple Card Expansion</h1>
      <p>Step 1: Image-only FLIP. No hero text.</p>
    </header>

    <div class="card-grid">
      {movies.map((movie, i) => (
        <article class="movie-card" data-card-index={i} tabindex="0" role="button" aria-label={`View ${movie.title}`}>
          <div class="card-scroll">
            <div class="card-hero">
              <img src={movie.poster} alt={movie.title} class="card-img" loading="lazy" />
              <div class="card-scrim"></div>
              <div class="card-blur"></div>
            </div>
          </div>
        </article>
      ))}
    </div>
  </div>
  </div>

  <!-- Expansion overlay -->
  <div class="expansion-overlay" id="expansion-overlay" data-open="false">
    <div class="expansion-backdrop" id="expansion-backdrop"></div>
  </div>

  <!-- Templates cloned on each open -->
  <template id="tmpl-body">
    <div class="expansion-body">
      <p class="expansion-description"></p>
      <div class="expansion-cast">
        <span class="cast-label">Starring</span>
        <p class="cast-names"></p>
      </div>
      <div class="expansion-actions">
        <button class="action-btn action-primary">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none"><path d="M15.5 5l-7 7 7 7" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" transform="rotate(180 12 12)"/></svg>
          Get Tickets
        </button>
        <button class="action-btn action-secondary">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none"><rect x="3" y="4" width="18" height="18" rx="2" stroke="currentColor" stroke-width="2"/><path d="M16 2v4M8 2v4M3 10h18" stroke="currentColor" stroke-width="2" stroke-linecap="round"/></svg>
          Add to Calendar
        </button>
      </div>
      <div class="expansion-showtimes">
        <span class="showtimes-label">Upcoming Showtimes</span>
        <div class="showtimes-list"></div>
      </div>
    </div>
  </template>

  <template id="tmpl-close">
    <button class="expansion-close" aria-label="Close">
      <svg width="14" height="14" viewBox="0 0 16 16" fill="none">
        <path d="M4 4l8 8M12 4l-8 8" stroke="currentColor" stroke-width="2.5" stroke-linecap="round"/>
      </svg>
    </button>
  </template>

  <template id="tmpl-handle">
    <div class="expansion-handle"><div class="expansion-handle-pill"></div></div>
  </template>
</Layout>

<script define:vars={{ moviesJson: JSON.stringify(movies) }}>
  const IOS_EASE = 'cubic-bezier(0.32, 0.72, 0, 1)';
  const DURATION = 2000;
  const PAGE_SCALE = 0.94;
  const movieData = JSON.parse(moviesJson);
  const prefersReducedMotion = window.matchMedia('(prefers-reduced-motion: reduce)').matches;

  const overlay = document.getElementById('expansion-overlay');
  const backdrop = document.getElementById('expansion-backdrop');
  const pageWrapper = document.getElementById('page-wrapper');

  if (!overlay || !backdrop || !pageWrapper) {
    throw new Error('Required DOM elements not found');
  }

  let isAnimating = false;
  let expandedCard = null;
  let scrollEl = null;
  let heroEl = null;
  let closeBtnEl = null;
  let handleEl = null;
  let bodyEl = null;
  let placeholder = null;
  let savedSourceRect = null;

  function populateBody(movie, bodyFrag) {
    const desc = bodyFrag.querySelector('.expansion-description');
    const castNames = bodyFrag.querySelector('.cast-names');
    const list = bodyFrag.querySelector('.showtimes-list');
    if (desc) desc.textContent = movie.description;
    if (castNames) castNames.textContent = movie.actors;
    if (list) {
      movie.showtimes.forEach(time => {
        const chip = document.createElement('span');
        chip.className = 'showtime-chip';
        chip.textContent = time;
        list.appendChild(chip);
      });
    }
  }

  function setPageOrigin() {
    const rect = pageWrapper.getBoundingClientRect();
    const originY = window.innerHeight / 2 - rect.top;
    pageWrapper.style.transformOrigin = `center ${originY}px`;
  }

  // --- FLIP OPEN (scale + clip-path) ---
  function open(index, el) {
    if (isAnimating) return;
    isAnimating = true;

    const safetyTimeout = setTimeout(() => {
      if (isAnimating) { console.warn('Safety timeout'); isAnimating = false; }
    }, DURATION * 3);

    try {
      // 1. Reset hover/active, measure source
      el.style.transition = 'none';
      el.style.transform = 'none';
      void el.offsetHeight;
      const sourceRect = el.getBoundingClientRect();
      savedSourceRect = sourceRect;

      // 2. Placeholder holds grid space
      placeholder = document.createElement('div');
      placeholder.className = 'card-placeholder';
      placeholder.style.width = sourceRect.width + 'px';
      placeholder.style.height = sourceRect.height + 'px';
      el.parentNode.insertBefore(placeholder, el);

      // 3. Move card into overlay
      overlay.appendChild(el);
      expandedCard = el;
      scrollEl = el.querySelector('.card-scroll');
      heroEl = el.querySelector('.card-hero');

      // 4. Expand — card takes on expanded CSS (position:fixed, centered)
      el.classList.add('expanded');
      el.style.opacity = '0';
      el.removeAttribute('tabindex');
      el.removeAttribute('role');

      // 5. Inject body, close button, handle
      const bodyTmpl = document.getElementById('tmpl-body');
      const bodyFrag = bodyTmpl.content.cloneNode(true);
      populateBody(movieData[index], bodyFrag);
      scrollEl.appendChild(bodyFrag);
      bodyEl = scrollEl.querySelector('.expansion-body');

      const closeTmpl = document.getElementById('tmpl-close');
      el.appendChild(closeTmpl.content.cloneNode(true));
      closeBtnEl = el.querySelector('.expansion-close');

      const handleTmpl = document.getElementById('tmpl-handle');
      el.appendChild(handleTmpl.content.cloneNode(true));
      handleEl = el.querySelector('.expansion-handle');

      scrollEl.scrollTop = 0;
      scrollEl.style.overflowY = 'hidden';

      // Reduced motion: instant
      if (prefersReducedMotion) {
        clearTimeout(safetyTimeout);
        overlay.dataset.open = 'true';
        document.body.style.overflow = 'hidden';
        el.style.opacity = '';
        el.style.transform = '';
        if (closeBtnEl) { closeBtnEl.style.opacity = '1'; closeBtnEl.style.transform = 'scale(1)'; }
        scrollEl.style.overflowY = '';
        isAnimating = false;
        return;
      }

      // 6. Measure expanded (Last position)
      void el.offsetHeight;
      const expandedRect = el.getBoundingClientRect();
      const heroRect = heroEl.getBoundingClientRect();

      // 7. FLIP calculations
      const scale = sourceRect.width / expandedRect.width;
      const dx = sourceRect.left - expandedRect.left;
      const dy = sourceRect.top - expandedRect.top;

      // Clip body content in element-local coords (before transform)
      // Hero fills top portion; clip everything below it
      const bodyClip = expandedRect.height - heroRect.height;

      // 8. Set FLIP inverse state — card appears at source position/size
      el.style.transformOrigin = 'top left';
      el.style.willChange = 'transform, clip-path';
      el.style.transform = `translate(${dx}px, ${dy}px) scale(${scale})`;
      el.style.clipPath = `inset(0px 0px ${bodyClip}px 0px round 16px)`;
      el.style.opacity = '1';

      // Hide body + close button initially
      if (bodyEl) bodyEl.style.opacity = '0';
      if (closeBtnEl) {
        closeBtnEl.style.transition = 'none';
        closeBtnEl.style.opacity = '0';
        closeBtnEl.style.transform = 'scale(0.8)';
      }

      overlay.dataset.open = 'true';
      document.body.style.overflow = 'hidden';
      void el.offsetHeight;

      // Page scale-down
      setPageOrigin();
      pageWrapper.style.willChange = 'transform';
      pageWrapper.style.transition = `transform ${DURATION}ms ${IOS_EASE}, border-radius ${DURATION}ms ${IOS_EASE}`;
      pageWrapper.style.transform = `scale(${PAGE_SCALE})`;
      pageWrapper.style.borderRadius = '12px';
      pageWrapper.style.overflow = 'hidden';

      // 9. PLAY — animate to final expanded state
      const finalRound = window.innerWidth < 640 ? '16px 16px 0px 0px' : '16px';
      const animOptions = { duration: DURATION, easing: IOS_EASE, fill: 'forwards' };

      const cardAnim = el.animate([
        { transform: `translate(${dx}px, ${dy}px) scale(${scale})`, clipPath: `inset(0px 0px ${bodyClip}px 0px round 16px)` },
        { transform: 'translate(0px, 0px) scale(1)', clipPath: `inset(0px 0px 0px 0px round ${finalRound})` }
      ], animOptions);

      // Hero bottom corners: rounded → flat as card expands
      const heroAnim = heroEl.animate([
        { borderRadius: '16px' },
        { borderRadius: '16px 16px 0 0' }
      ], animOptions);

      // Backdrop
      backdrop.style.transition = `opacity ${DURATION}ms ${IOS_EASE}`;
      backdrop.style.opacity = '1';

      // Close button entrance (delayed)
      const closeDelay = Math.round(DURATION * 0.5);
      if (closeBtnEl) {
        void closeBtnEl.offsetHeight;
        closeBtnEl.style.transition = `opacity 300ms ease-out ${closeDelay}ms, transform 300ms ease-out ${closeDelay}ms`;
        closeBtnEl.style.opacity = '1';
        closeBtnEl.style.transform = 'scale(1)';
      }

      // Body staggered fade-in
      if (bodyEl) {
        const desc = bodyEl.querySelector('.expansion-description');
        const cast = bodyEl.querySelector('.expansion-cast');
        const actions = bodyEl.querySelector('.expansion-actions');
        const times = bodyEl.querySelector('.expansion-showtimes');
        const base = Math.round(DURATION * 0.15);
        const dur = Math.round(DURATION * 0.4);
        const gap = 40;
        if (desc) desc.style.transition = `opacity ${dur}ms ease-out ${base}ms`;
        if (cast) cast.style.transition = `opacity ${dur}ms ease-out ${base + gap}ms`;
        if (actions) actions.style.transition = `opacity ${dur}ms ease-out ${base + gap * 2}ms`;
        if (times) times.style.transition = `opacity ${dur}ms ease-out ${base + gap * 3}ms`;
        void bodyEl.offsetHeight;
        bodyEl.style.opacity = '1';
        if (desc) desc.style.opacity = '1';
        if (cast) cast.style.opacity = '1';
        if (actions) actions.style.opacity = '1';
        if (times) times.style.opacity = '1';
      }

      // 10. Commit final state
      cardAnim.finished.then(() => {
        clearTimeout(safetyTimeout);
        el.style.transform = '';
        el.style.clipPath = '';
        el.style.willChange = '';
        el.style.transformOrigin = '';
        el.style.borderRadius = '';
        cardAnim.cancel();
        heroAnim.cancel();
        heroEl.style.borderRadius = '';
        scrollEl.style.overflowY = '';
        pageWrapper.style.transition = '';
        if (closeBtnEl) closeBtnEl.style.transition = '';
        if (bodyEl) {
          bodyEl.querySelectorAll('.expansion-description, .expansion-cast, .expansion-actions, .expansion-showtimes')
            .forEach(s => s.style.transition = '');
        }
        isAnimating = false;
      }).catch(() => { clearTimeout(safetyTimeout); isAnimating = false; });
    } catch (error) {
      console.error('Error during open:', error);
      clearTimeout(safetyTimeout);
      isAnimating = false;
      if (expandedCard) { expandedCard.classList.remove('expanded'); expandedCard.style.opacity = ''; }
      document.body.style.overflow = '';
      overlay.dataset.open = 'false';
    }
  }

  // --- FLIP CLOSE (scale + clip-path) ---
  function close() {
    if (isAnimating || !expandedCard) return;
    isAnimating = true;

    const safetyTimeout = setTimeout(() => {
      if (isAnimating) { console.warn('Safety timeout'); isAnimating = false; }
    }, DURATION * 3);

    try {
      const el = expandedCard;

      if (prefersReducedMotion) {
        clearTimeout(safetyTimeout);
        cleanupExpansion(el);
        isAnimating = false;
        return;
      }

      // 1. Fade out close button (fast, before FLIP starts) + body
      const fadeDur = Math.round(DURATION * 0.35);
      if (closeBtnEl) {
        closeBtnEl.style.transition = 'opacity 150ms ease-in, transform 150ms ease-in';
        closeBtnEl.style.opacity = '0';
        closeBtnEl.style.transform = 'scale(0.8)';
      }
      if (bodyEl) {
        bodyEl.querySelectorAll('.expansion-description, .expansion-cast, .expansion-actions, .expansion-showtimes')
          .forEach(s => { s.style.transition = `opacity ${fadeDur}ms ease-in`; s.style.opacity = '0'; });
      }

      // 2. Scroll to top, disable scroll
      scrollEl.scrollTop = 0;
      scrollEl.style.overflowY = 'hidden';

      // 3. Measure current expanded rect + use saved source rect as target
      // (placeholder.getBoundingClientRect() is wrong here because the page
      // is still at scale(0.94) — it gives the scaled-down position, but by
      // the time the animation ends the page is back at scale(1))
      el.style.transformOrigin = 'top left';
      el.style.willChange = 'transform, clip-path';
      void el.offsetHeight;

      const expandedRect = el.getBoundingClientRect();
      const targetRect = savedSourceRect;
      const heroRect = heroEl.getBoundingClientRect();

      const scale = targetRect.width / expandedRect.width;
      const dx = targetRect.left - expandedRect.left;
      const dy = targetRect.top - expandedRect.top;
      const bodyClip = expandedRect.height - heroRect.height;

      // 4. Animate to source position/size
      const startRound = window.innerWidth < 640 ? '16px 16px 0px 0px' : '16px';
      const animOptions = { duration: DURATION, easing: IOS_EASE, fill: 'forwards' };

      const cardAnim = el.animate([
        { transform: 'translate(0px, 0px) scale(1)', clipPath: `inset(0px 0px 0px 0px round ${startRound})` },
        { transform: `translate(${dx}px, ${dy}px) scale(${scale})`, clipPath: `inset(0px 0px ${bodyClip}px 0px round 16px)` }
      ], animOptions);

      // Hero bottom corners: flat → rounded as card collapses
      const heroAnim = heroEl.animate([
        { borderRadius: '16px 16px 0 0' },
        { borderRadius: '16px' }
      ], animOptions);

      // Backdrop
      backdrop.style.transition = `opacity ${DURATION}ms ${IOS_EASE}`;
      backdrop.style.opacity = '0';

      // Un-scale page
      pageWrapper.style.willChange = 'transform';
      pageWrapper.style.transition = `transform ${DURATION}ms ${IOS_EASE}, border-radius ${DURATION}ms ${IOS_EASE}`;
      pageWrapper.style.transform = '';
      pageWrapper.style.borderRadius = '';

      // 5. Clean up
      cardAnim.finished.then(() => {
        clearTimeout(safetyTimeout);
        cardAnim.cancel();
        cleanupExpansion(el);
        isAnimating = false;
      }).catch(() => {
        clearTimeout(safetyTimeout);
        cleanupExpansion(el);
        isAnimating = false;
      });
    } catch (error) {
      console.error('Error during close:', error);
      clearTimeout(safetyTimeout);
      cleanupExpansion(expandedCard);
      isAnimating = false;
    }
  }

  function cleanupExpansion(el) {
    if (!el) return;
    const injectedBody = el.querySelector('.expansion-body');
    if (injectedBody) injectedBody.remove();
    const injectedClose = el.querySelector('.expansion-close');
    if (injectedClose) injectedClose.remove();
    const injectedHandle = el.querySelector('.expansion-handle');
    if (injectedHandle) injectedHandle.remove();

    if (placeholder && placeholder.parentNode) {
      placeholder.parentNode.insertBefore(el, placeholder);
      placeholder.remove();
    }

    el.classList.remove('expanded');
    el.style.transition = '';
    el.style.transform = '';
    el.style.opacity = '';
    el.style.clipPath = '';
    el.style.willChange = '';
    el.style.transformOrigin = '';
    el.style.borderRadius = '';
    el.setAttribute('tabindex', '0');
    el.setAttribute('role', 'button');

    if (scrollEl) scrollEl.style.overflowY = '';
    if (heroEl) heroEl.style.borderRadius = '';

    overlay.dataset.open = 'false';
    document.body.style.overflow = '';
    resetPage();

    expandedCard = null;
    scrollEl = null;
    heroEl = null;
    closeBtnEl = null;
    handleEl = null;
    bodyEl = null;
    placeholder = null;
    savedSourceRect = null;
  }

  function resetPage() {
    pageWrapper.style.transition = '';
    pageWrapper.style.transform = '';
    pageWrapper.style.borderRadius = '';
    pageWrapper.style.overflow = '';
    pageWrapper.style.transformOrigin = '';
    pageWrapper.style.willChange = '';
  }

  // --- SWIPE-TO-DISMISS ---
  let isDragging = false;
  let isTracking = false;
  let dragStartY = 0;
  let dragCurrentY = 0;
  let dragStartTime = 0;
  const CLOSE_THRESHOLD = 0.25;
  const VELOCITY_THRESHOLD = 0.5;

  function applyDragVisuals(deltaY) {
    if (!expandedCard) return;
    const height = expandedCard.offsetHeight;
    if (deltaY < 0) {
      const damped = Math.sqrt(Math.abs(deltaY)) * 3;
      dragCurrentY = -damped;
      expandedCard.style.transform = `translateY(${-damped}px)`;
    } else {
      dragCurrentY = deltaY;
      expandedCard.style.transform = `translateY(${deltaY}px)`;
      const percent = Math.min(deltaY / height, 1);
      backdrop.style.opacity = String(Math.max(0, 1 - percent * 1.5));
      expandedCard.style.borderRadius = `${Math.min(percent * 80, 20)}px`;
      const pageScale = PAGE_SCALE + (1 - PAGE_SCALE) * percent;
      pageWrapper.style.transition = 'none';
      pageWrapper.style.transform = `scale(${pageScale})`;
      pageWrapper.style.borderRadius = `${Math.max(0, 12 * (1 - percent))}px`;
    }
  }

  document.addEventListener('touchstart', (e) => {
    if (isAnimating || overlay.dataset.open !== 'true' || !expandedCard) return;
    const scrollTarget = e.target.closest('.card-scroll');
    if (!scrollTarget || !expandedCard.contains(scrollTarget)) return;
    dragStartY = e.touches[0].clientY;
    dragStartTime = Date.now();
    dragCurrentY = 0;
    isTracking = true;
    isDragging = false;
  }, { passive: true });

  document.addEventListener('touchmove', (e) => {
    if (!isTracking || !scrollEl) return;
    const currentY = e.touches[0].clientY;
    const deltaY = currentY - dragStartY;
    if (!isDragging) {
      if (Math.abs(deltaY) < 8) return;
      if (deltaY > 0 && scrollEl.scrollTop <= 0) {
        isDragging = true;
        if (expandedCard) expandedCard.classList.add('dragging');
      } else { isTracking = false; return; }
    }
    e.preventDefault();
    applyDragVisuals(deltaY);
  }, { passive: false });

  document.addEventListener('touchend', () => {
    const wasDragging = isDragging;
    isTracking = false;
    isDragging = false;
    if (!wasDragging) return;
    if (expandedCard) expandedCard.classList.remove('dragging');
    finishDrag();
  }, { passive: true });

  document.addEventListener('pointerdown', (e) => {
    if (isAnimating || overlay.dataset.open !== 'true' || !expandedCard) return;
    const heroTarget = e.target.closest('.card-hero');
    const handleTarget = e.target.closest('.expansion-handle');
    if (!heroTarget && !handleTarget) return;
    if (!expandedCard.contains(heroTarget || handleTarget)) return;
    if (scrollEl && scrollEl.scrollTop > 0) return;
    if (e.button !== 0 && e.pointerType === 'mouse') return;
    isDragging = true;
    dragStartY = e.clientY;
    dragCurrentY = 0;
    dragStartTime = Date.now();
    expandedCard.classList.add('dragging');
    expandedCard.setPointerCapture(e.pointerId);
    e.preventDefault();
  });

  document.addEventListener('pointermove', (e) => {
    if (!isDragging || isTracking) return;
    applyDragVisuals(e.clientY - dragStartY);
  });

  document.addEventListener('pointerup', (e) => {
    if (!isDragging || isTracking) return;
    isDragging = false;
    if (expandedCard) {
      expandedCard.classList.remove('dragging');
      expandedCard.releasePointerCapture(e.pointerId);
    }
    finishDrag();
  });

  function finishDrag() {
    if (!expandedCard) return;
    const height = expandedCard.offsetHeight;
    const percentDragged = dragCurrentY / height;
    const timeTaken = Date.now() - dragStartTime;
    const velocity = timeTaken > 0 ? dragCurrentY / timeTaken : 0;
    if (percentDragged > CLOSE_THRESHOLD || velocity > VELOCITY_THRESHOLD) {
      expandedCard.style.transition = 'none';
      expandedCard.style.transform = '';
      expandedCard.style.borderRadius = '';
      close();
    } else {
      snapBack();
    }
    dragCurrentY = 0;
  }

  function snapBack() {
    if (!expandedCard) return;
    expandedCard.style.transition = `transform ${DURATION}ms ${IOS_EASE}, border-radius ${DURATION}ms ${IOS_EASE}`;
    expandedCard.style.transform = '';
    expandedCard.style.borderRadius = '';
    backdrop.style.transition = `opacity ${DURATION}ms ${IOS_EASE}`;
    backdrop.style.opacity = '1';
    pageWrapper.style.transition = `transform ${DURATION}ms ${IOS_EASE}, border-radius ${DURATION}ms ${IOS_EASE}`;
    pageWrapper.style.transform = `scale(${PAGE_SCALE})`;
    pageWrapper.style.borderRadius = '12px';
    const done = (e) => {
      if (e.target !== expandedCard || e.propertyName !== 'transform') return;
      expandedCard.removeEventListener('transitionend', done);
      expandedCard.style.transition = '';
      pageWrapper.style.transition = '';
    };
    expandedCard.addEventListener('transitionend', done);
  }

  // --- Event listeners ---
  document.querySelectorAll('.movie-card').forEach(cardEl => {
    cardEl.addEventListener('click', () => {
      if (cardEl.classList.contains('expanded')) return;
      open(parseInt(cardEl.dataset.cardIndex, 10), cardEl);
    });
    cardEl.addEventListener('keydown', (e) => {
      if (e.key === 'Enter' || e.key === ' ') {
        e.preventDefault();
        if (cardEl.classList.contains('expanded')) return;
        open(parseInt(cardEl.dataset.cardIndex, 10), cardEl);
      }
    });
  });

  overlay.addEventListener('click', (e) => {
    if (e.target.closest('.expansion-close')) close();
  });
  backdrop.addEventListener('click', close);
  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape' && overlay.dataset.open === 'true') close();
  });
</script>

<style>
  /* =============================================
     PAGE LAYOUT
     ============================================= */

  .page-wrapper {
    background: var(--bg-body);
    min-height: 100vh;
  }

  .apple-card-page {
    max-width: 900px;
    margin: 0 auto;
    padding: 0 16px 60px;
  }

  .page-header {
    padding: 24px 0 32px;
  }

  .page-header h1 {
    font-family: 'Barlow Condensed', sans-serif;
    font-weight: 600;
    font-size: 28px;
    letter-spacing: -0.01em;
    color: var(--text-primary);
    margin: 0 0 6px;
  }

  .page-header p {
    font-size: 14px;
    color: var(--text-secondary);
    margin: 0;
  }

  /* =============================================
     CARD GRID
     ============================================= */

  .card-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 20px;
  }

  @media (min-width: 580px) {
    .card-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  :global(.card-placeholder) {
    border-radius: 16px;
  }

  /* =============================================
     MOVIE CARD (COLLAPSED)
     ============================================= */

  .movie-card {
    position: relative;
    border-radius: 16px;
    overflow: hidden;
    -webkit-mask-image: linear-gradient(#fff 0 0);
    mask-image: linear-gradient(#fff 0 0);
    cursor: pointer;
    -webkit-tap-highlight-color: transparent;
    transition: transform 0.15s ease;
    outline: none;
    box-shadow:
      0 2px 8px rgba(0, 0, 0, 0.25),
      0 8px 24px rgba(0, 0, 0, 0.15);
  }

  @media (hover: hover) {
    .movie-card:not(.expanded):hover {
      transform: scale(1.02);
    }
  }

  .movie-card:not(.expanded):active {
    transform: scale(0.98);
    transition-duration: 0.1s;
  }

  .movie-card:not(.expanded):focus-visible {
    box-shadow: 0 0 0 3px var(--accent);
  }

  /* =============================================
