<script define:vars={{ moviesJson: JSON.stringify(movies) }}>
  const IOS_EASE = 'cubic-bezier(0.32, 0.72, 0, 1)';
  const DURATION = 500;
  const movieData = JSON.parse(moviesJson);

  const overlay = document.getElementById('expansion-overlay');
  const backdrop = document.getElementById('expansion-backdrop');
  const card = document.getElementById('expansion-card');
  const scroll = document.getElementById('expansion-scroll');
  const body = document.getElementById('expansion-body');
  const closeBtn = document.getElementById('expansion-close');
  const pageContent = document.getElementById('page-content');

  let isAnimating = false;
  let sourceEl = null;

  // Populate expanded card content
  function populate(movie) {
    document.getElementById('expansion-img').src = movie.poster;
    document.getElementById('expansion-img').alt = movie.title;
    document.getElementById('expansion-badge').textContent = movie.badge;
    document.getElementById('expansion-label').textContent = movie.label;
    document.getElementById('expansion-title').textContent = movie.title;
    document.getElementById('expansion-meta').textContent =
      `${movie.director} 路 ${movie.year} 路 ${movie.runtime}`;
    document.getElementById('expansion-description').textContent = movie.description;
    document.getElementById('expansion-cast-names').textContent = movie.actors;

    const list = document.getElementById('expansion-showtimes-list');
    list.innerHTML = movie.showtimes
      .map(t => `<span class="showtime-chip">${t}</span>`)
      .join('');
  }

  // --- FLIP OPEN ---
  function open(index, el) {
    if (isAnimating) return;
    isAnimating = true;
    sourceEl = el;

    populate(movieData[index]);
    scroll.scrollTop = 0;

    // Show overlay
    overlay.dataset.open = 'true';
    document.body.style.overflow = 'hidden';

    // FIRST: record source card position
    const first = el.getBoundingClientRect();

    // Hide original card
    el.style.opacity = '0';

    // Get final position (the expansion-card's natural position)
    // On mobile: fills viewport. On desktop: centered with margins.
    const vw = window.innerWidth;
    const vh = window.innerHeight;

    // Force card to its final layout to measure
    card.style.transition = 'none';
    card.style.transform = 'none';
    card.style.opacity = '1';
    void card.offsetHeight;

    const last = card.getBoundingClientRect();

    // INVERT: calculate transform from last -> first
    const scaleX = first.width / last.width;
    const scaleY = first.height / last.height;

    const firstCenterX = first.left + first.width / 2;
    const firstCenterY = first.top + first.height / 2;
    const lastCenterX = last.left + last.width / 2;
    const lastCenterY = last.top + last.height / 2;

    const dx = firstCenterX - lastCenterX;
    const dy = firstCenterY - lastCenterY;

    // Apply inverted state (card appears at source position)
    card.style.transform = `translate(${dx}px, ${dy}px) scale(${scaleX}, ${scaleY})`;
    card.style.borderRadius = `${12 / scaleX}px`;
    if (body) body.style.opacity = '0';

    void card.offsetHeight; // force reflow

    // PLAY: animate to final state
    card.style.transition = [
      `transform ${DURATION}ms ${IOS_EASE}`,
      `border-radius ${DURATION}ms ${IOS_EASE}`,
    ].join(', ');
    card.style.transform = 'translate(0, 0) scale(1)';
    card.style.borderRadius = '';

    // Backdrop fade in
    backdrop.style.transition = `opacity ${DURATION}ms ${IOS_EASE}`;
    backdrop.style.opacity = '1';

    // Scale page content behind
    if (pageContent) {
      pageContent.style.transition = `transform ${DURATION}ms ${IOS_EASE}, border-radius ${DURATION}ms ${IOS_EASE}`;
      pageContent.style.transform = 'scale(0.94)';
      pageContent.style.borderRadius = '12px';
    }

    // Fade in body content after delay
    setTimeout(() => {
      if (body) {
        body.style.transition = 'opacity 300ms ease';
        body.style.opacity = '1';
      }
    }, DURATION * 0.35);

    setTimeout(() => {
      card.style.transition = '';
      isAnimating = false;
    }, DURATION);
  }

  // --- FLIP CLOSE ---
  function close() {
    if (isAnimating) return;
    isAnimating = true;

    const el = sourceEl;
    if (!el) {
      // Fallback: just hide
      overlay.dataset.open = 'false';
      document.body.style.overflow = '';
      isAnimating = false;
      return;
    }

    const targetRect = el.getBoundingClientRect();
    const last = card.getBoundingClientRect();

    const scaleX = targetRect.width / last.width;
    const scaleY = targetRect.height / last.height;

    const targetCX = targetRect.left + targetRect.width / 2;
    const targetCY = targetRect.top + targetRect.height / 2;
    const cardCX = last.left + last.width / 2;
    const cardCY = last.top + last.height / 2;

    const dx = targetCX - cardCX;
    const dy = targetCY - cardCY;

    // Fade out body first
    if (body) {
      body.style.transition = 'opacity 120ms ease';
      body.style.opacity = '0';
    }

    // Scroll to top smoothly before animating back
    scroll.scrollTop = 0;

    // Animate card back to source position
    card.style.transition = [
      `transform ${DURATION}ms ${IOS_EASE}`,
      `border-radius ${DURATION}ms ${IOS_EASE}`,
    ].join(', ');
    card.style.transform = `translate(${dx}px, ${dy}px) scale(${scaleX}, ${scaleY})`;
    card.style.borderRadius = `${12 / scaleX}px`;

    // Fade backdrop
    backdrop.style.transition = `opacity ${DURATION}ms ${IOS_EASE}`;
    backdrop.style.opacity = '0';

    // Unscale page
    if (pageContent) {
      pageContent.style.transition = `transform ${DURATION}ms ${IOS_EASE}, border-radius ${DURATION}ms ${IOS_EASE}`;
      pageContent.style.transform = '';
      pageContent.style.borderRadius = '';
    }

    setTimeout(() => {
      el.style.opacity = '';
      overlay.dataset.open = 'false';
      card.style.transition = '';
      card.style.transform = '';
      card.style.borderRadius = '';
      card.style.opacity = '';
      if (body) {
        body.style.transition = '';
        body.style.opacity = '';
      }
      document.body.style.overflow = '';
      sourceEl = null;
      isAnimating = false;
    }, DURATION);
  }

  // --- Event listeners ---

  // Card clicks
  document.querySelectorAll('.movie-card').forEach(cardEl => {
    cardEl.addEventListener('click', () => {
      const index = parseInt(cardEl.dataset.cardIndex, 10);
      open(index, cardEl);
    });
    cardEl.addEventListener('keydown', (e) => {
      if (e.key === 'Enter' || e.key === ' ') {
        e.preventDefault();
        const index = parseInt(cardEl.dataset.cardIndex, 10);
        open(index, cardEl);
      }
    });
  });

  // Close button
  closeBtn.addEventListener('click', close);

  // Backdrop click
  backdrop.addEventListener('click', close);

  // Escape key
  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape' && overlay.dataset.open === 'true') {
      close();
    }
  });
</script>

<style>
  /* =============================================
     PAGE LAYOUT
     ============================================= */

  .apple-card-page {
    max-width: 900px;
    margin: 0 auto;
    padding: 0 16px 60px;
    transform-origin: center top;
    will-change: transform;
  }

  .page-header {
    padding: 24px 0 32px;
  }

  .page-header h1 {
    font-family: 'Barlow Condensed', sans-serif;
    font-weight: 600;
    font-size: 28px;
    letter-spacing: -0.01em;
