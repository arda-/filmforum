    position: relative;
    aspect-ratio: 4 / 3;
    border-radius: 16px;
    overflow: hidden;
    cursor: pointer;
    -webkit-tap-highlight-color: transparent;
    will-change: transform, opacity;
    transition: transform 0.2s ease;
    outline: none;
  }

  .movie-card:hover {
    transform: scale(1.02);
  }

  .movie-card:active {
    transform: scale(0.98);
    transition-duration: 0.1s;
  }

  .movie-card:focus-visible {
    box-shadow: 0 0 0 3px var(--accent);
  }

  .card-img {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  /* Progressive blur over the image */
  .card-blur {
    position: absolute;
    inset: 0;
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
    mask-image: linear-gradient(to top, black 0%, black 20%, transparent 55%);
    -webkit-mask-image: linear-gradient(to top, black 0%, black 20%, transparent 55%);
    pointer-events: none;
    z-index: 1;
  }

  /* Content overlay on the card */
  .card-content {
    position: absolute;
    inset: 0;
    z-index: 2;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    padding: 16px;
    pointer-events: none;
  }

  .card-badge {
    align-self: flex-start;
    font-family: 'Barlow Semi Condensed', sans-serif;
    font-weight: 600;
    font-size: 11px;
    letter-spacing: 0.08em;
    color: #fff;
    background: rgba(0, 0, 0, 0.55);
    backdrop-filter: blur(8px);
    -webkit-backdrop-filter: blur(8px);
    padding: 5px 10px;
    border-radius: 6px;
    text-shadow: 0 1px 2px rgba(0, 0, 0, 0.3);
  }

  .card-info {
    display: flex;
    flex-direction: column;
    gap: 3px;
  }

  .card-label {
    font-family: 'Barlow Semi Condensed', sans-serif;
    font-weight: 600;
    font-size: 11px;
    letter-spacing: 0.1em;
    color: #d4a574;
    text-shadow: 0 1px 4px rgba(0, 0, 0, 0.6);
