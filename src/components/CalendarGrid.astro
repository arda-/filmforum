---
interface Props {
  weekStartsMonday?: boolean;
}

const { weekStartsMonday = true } = Astro.props;
---

<div class="calendar">
  <!-- Spacers for Monday-start (6 empty cells before Feb 1 Sunday) -->
  <div class="day empty spacer-mon"></div>
  <div class="day empty spacer-mon"></div>
  <div class="day empty spacer-mon"></div>
  <div class="day empty spacer-mon"></div>
  <div class="day empty spacer-mon"></div>
  <div class="day empty spacer-mon"></div>

  <slot />
</div>

<!-- Styles are in src/styles/calendar.css (global) -->
