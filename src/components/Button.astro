---
interface Props {
  variant?: 'primary' | 'secondary' | 'danger' | 'outline' | 'ghost' | 'link';
  size?: 'default' | 'sm' | 'lg' | 'icon';
  class?: string;
  type?: 'button' | 'submit' | 'reset';
  disabled?: boolean;
  form?: string;
}

const {
  variant = 'primary',
  size = 'default',
  class: className = '',
  type = 'button',
  disabled = false,
  form
} = Astro.props;
---

<button
  type={type}
  class:list={['btn', `btn--${variant}`, `btn--${size}`, className]}
  disabled={disabled}
  {form}
>
  <slot />
</button>

<style>
  .btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
    font-size: 14px;
    font-weight: 500;
    font-family: inherit;
    border-radius: 8px;
    border: 1px solid transparent;
    background-color: transparent;
    cursor: pointer;
    transition:
      background-color 0.15s ease,
      color 0.15s ease,
      border-color 0.15s ease,
      transform 0.1s ease;
  }

  .btn:active:not(:disabled) {
    transform: scale(0.97);
  }

  .btn:disabled {
    opacity: 0.5;
    cursor: not-allowed;
  }

  /* Sizes - use compound selectors for proper specificity with scoped styles */
  .btn.btn--default {
    padding: 8px 14px;
  }

  .btn.btn--sm {
    padding: 6px 12px;
    font-size: 13px;
  }

  .btn.btn--lg {
    padding: 10px 18px;
    font-size: 16px;
  }

  .btn.btn--icon {
    padding: 10px;
    width: 40px;
    height: 40px;
  }

  /* Variants - use compound selectors for proper specificity with scoped styles */
  .btn.btn--primary {
    background-color: var(--accent);
    color: #fff;
  }

  .btn.btn--primary:hover:not(:disabled) {
    background-color: var(--accent-bg);
  }

  .btn.btn--secondary {
    background-color: var(--bg-movie);
    color: var(--text-secondary);
  }

  .btn.btn--secondary:hover:not(:disabled) {
    background-color: var(--bg-movie-hover);
    color: var(--text-primary);
  }

  .btn.btn--danger {
    background-color: #dc2626;
    color: #fff;
  }

  .btn.btn--danger:hover:not(:disabled) {
    background-color: #b91c1c;
  }

  .btn.btn--outline {
    background-color: transparent;
    color: var(--text-primary);
    border-color: var(--bg-movie-hover);
  }

  .btn.btn--outline:hover:not(:disabled) {
    background-color: var(--bg-movie);
  }

  .btn.btn--ghost {
    background-color: transparent;
    color: var(--text-secondary);
  }

  .btn.btn--ghost:hover:not(:disabled) {
    background-color: var(--bg-movie);
    color: var(--text-primary);
  }

  .btn.btn--link {
    background-color: transparent;
    border-color: transparent;
    color: var(--accent);
    padding: 0;
    height: auto;
    text-decoration: underline;
    text-underline-offset: 4px;
  }

  .btn.btn--link:hover:not(:disabled) {
    color: var(--accent-bg);
  }

  .btn.btn--link:active:not(:disabled) {
    transform: none;
  }
</style>
