---
import type { UniqueMovie, MovieReaction } from '../../types/session';
import { toTitleCase, formatRuntime } from '../../utils/movieUtils';

interface Props {
  uniqueMovie: UniqueMovie;
  reaction?: MovieReaction;
  showActors?: boolean;
  showBlurb?: boolean;
  showImage?: boolean;
}

const {
  uniqueMovie,
  reaction = 'none',
  showActors = true,
  showBlurb = false,
  showImage = true,
} = Astro.props;
const { movie, id } = uniqueMovie;
const title = toTitleCase(movie.Movie);
const meta = [movie.director, movie.year, formatRuntime(movie.runtime)].filter(Boolean).join(' · ');
const hasPoster = !!movie.poster_url;
---

<div
  class:list={['card', { 'card--has-poster': hasPoster && showImage, [`card--${reaction}`]: reaction !== 'none' }]}
  data-movie-id={id}
  data-reaction={reaction}
>
  {hasPoster && (
    <img class="card-poster-img" src={movie.poster_url} alt={title} loading="lazy" style={showImage ? undefined : 'display:none'} />
  )}

  {hasPoster && (
    <div class="card-blur" style={showImage ? undefined : 'display:none'}></div>
  )}

  <div class="card-overlay">
    <div class="card-header">
      <h3 class="card-title">{title}</h3>
      <button class="card-info-btn" data-action="more-info" data-movie-id={id} aria-label={`More info about ${title}`}>
        <svg width="16" height="16" viewBox="0 0 16 16" fill="none">
          <circle cx="8" cy="8" r="7" stroke="currentColor" stroke-width="1.5"/>
          <path d="M8 7v4M8 5.5v-.01" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"/>
        </svg>
      </button>
    </div>
    <p class="card-meta">{meta}</p>
    {movie.actors && <p class="card-actors" style={showActors ? undefined : 'display:none'}>{movie.actors}</p>}
    {movie.description && <p class="card-blurb" style={showBlurb ? undefined : 'display:none'}>{movie.description}</p>}

    <div class="card-reactions" data-movie-id={id}>
      <button
        class:list={['reaction-btn', 'reaction-btn--yes', { active: reaction === 'yes' }]}
        data-reaction="yes"
        data-movie-id={id}
        aria-pressed={reaction === 'yes'}
        aria-label="Yes"
        title="Yes"
      ><svg width="14" height="14" viewBox="0 0 16 16" fill="none"><path d="M13.5 4.5l-7 7L3 8" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/></svg><span>Yes</span></button>
      <button
        class:list={['reaction-btn', 'reaction-btn--maybe', { active: reaction === 'maybe' }]}
        data-reaction="maybe"
        data-movie-id={id}
        aria-pressed={reaction === 'maybe'}
        aria-label="Maybe"
        title="Maybe"
      ><svg width="14" height="14" viewBox="0 0 16 16" fill="none"><circle cx="8" cy="11.5" r="1" fill="currentColor"/><path d="M6 6a2 2 0 114 0c0 1-1.5 1.5-2 2.5" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"/></svg><span>Maybe</span></button>
      <button
        class:list={['reaction-btn', 'reaction-btn--no', { active: reaction === 'no' }]}
        data-reaction="no"
        data-movie-id={id}
        aria-pressed={reaction === 'no'}
        aria-label="No"
        title="No"
      ><svg width="14" height="14" viewBox="0 0 16 16" fill="none"><path d="M4 4l8 8M12 4l-8 8" stroke="currentColor" stroke-width="2" stroke-linecap="round"/></svg><span>No</span></button>
    </div>
  </div>
</div>

<style>
  .card {
    position: relative;
    border-radius: 12px;
    overflow: hidden;
    background: var(--bg-movie);
    cursor: pointer;
    transition: box-shadow 0.25s;
  }

  /* When poster is visible, card gets fixed aspect ratio */
  .card--has-poster {
    aspect-ratio: 3 / 4;
  }

  .card:hover {
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.2);
  }

  /* Reaction state glow */
  .card--yes {
    box-shadow: 0 0 0 2px var(--reaction-yes, #22c55e), 0 2px 8px rgba(34, 197, 94, 0.15);
  }
  .card--maybe {
    box-shadow: 0 0 0 2px var(--reaction-maybe, #f59e0b), 0 2px 8px rgba(245, 158, 11, 0.15);
  }
  .card--no {
    box-shadow: 0 0 0 2px var(--reaction-no, #6b7280), 0 2px 8px rgba(107, 114, 128, 0.1);
    opacity: 0.65;
  }

  /* Poster fills entire card */
  .card-poster-img {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  /* Blur layer — single-layer backdrop blur with mask fade */
  .card-blur {
    position: absolute;
    inset: 0;
    backdrop-filter: blur(16px);
    -webkit-backdrop-filter: blur(16px);
    mask-image: linear-gradient(to top, black 0%, black 20%, transparent 55%);
    -webkit-mask-image: linear-gradient(to top, black 0%, black 20%, transparent 55%);
    pointer-events: none;
    z-index: 1;
  }

  /* Text + buttons overlay at bottom */
  .card-overlay {
    position: relative;
    z-index: 2;
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    gap: 2px;
    padding: 12px;
    min-height: 100%;
    box-sizing: border-box;
  }

  .card--has-poster .card-overlay {
    position: absolute;
    inset: 0;
    padding: 10px;
  }

  .card--has-poster .card-title,
  .card--has-poster .card-meta,
  .card--has-poster .card-actors {
    color: #fff;
    text-shadow: 0 1px 3px rgba(0, 0, 0, 0.5);
  }

  .card--has-poster .card-info-btn {
    color: rgba(255, 255, 255, 0.7);
  }

  .card--has-poster .card-info-btn:hover {
    color: #fff;
    background: rgba(255, 255, 255, 0.15);
  }

  .card-header {
    display: flex;
    align-items: flex-start;
    gap: 6px;
  }

  .card-title {
    flex: 1;
    font-size: 15px;
    font-weight: 600;
    color: var(--text-primary);
    margin: 0;
    line-height: 1.3;
  }

  .card-info-btn {
    flex-shrink: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 24px;
    height: 24px;
    padding: 0;
    background: transparent;
    border: none;
    color: var(--text-tertiary);
    cursor: pointer;
    border-radius: 4px;
    transition: color 0.15s, background 0.15s;
  }

  .card-info-btn:hover {
    color: var(--accent);
    background: var(--bg-movie);
  }

  .card-meta {
    font-size: 12px;
    color: var(--text-secondary);
    margin: 0;
  }

  .card--has-poster .card-meta {
    color: rgba(255, 255, 255, 0.8);
  }

  .card-actors {
    font-size: 11px;
    color: var(--text-tertiary);
    margin: 0;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  .card--has-poster .card-actors {
    color: rgba(255, 255, 255, 0.7);
  }

  .card-blurb {
    font-size: 11px;
    color: var(--text-secondary);
    margin: 4px 0 0 0;
    line-height: 1.4;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .card--has-poster .card-blurb {
    color: rgba(255, 255, 255, 0.75);
    text-shadow: 0 1px 2px rgba(0, 0, 0, 0.4);
  }

  .card-reactions {
    display: flex;
    gap: 4px;
    margin-top: 6px;
  }

  /* Reaction buttons */
  .reaction-btn {
    flex: 1;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 4px;
    padding: 6px 0;
    font-size: 12px;
    font-weight: 500;
    font-family: inherit;
    border-radius: 6px;
    border: 1.5px solid transparent;
    background: transparent;
    cursor: pointer;
    transition: all 0.15s ease;
    user-select: none;
  }

  .reaction-btn:active {
    transform: scale(0.93);
  }

  /* On poster cards, buttons get semi-transparent backgrounds */
  .card--has-poster .reaction-btn {
    background: rgba(0, 0, 0, 0.3);
    backdrop-filter: blur(4px);
    -webkit-backdrop-filter: blur(4px);
  }

  .reaction-btn--yes {
    color: var(--reaction-yes, #22c55e);
    border-color: var(--reaction-yes, #22c55e);
  }
  .reaction-btn--yes:hover {
    background: rgba(34, 197, 94, 0.15);
  }
  .reaction-btn--yes.active {
    background: var(--reaction-yes, #22c55e);
    color: #fff;
  }

  .reaction-btn--maybe {
    color: var(--reaction-maybe, #f59e0b);
    border-color: var(--reaction-maybe, #f59e0b);
  }
  .reaction-btn--maybe:hover {
    background: rgba(245, 158, 11, 0.15);
  }
  .reaction-btn--maybe.active {
    background: var(--reaction-maybe, #f59e0b);
    color: #fff;
  }

  .reaction-btn--no {
    color: var(--reaction-no, #6b7280);
    border-color: var(--reaction-no, #6b7280);
  }
  .reaction-btn--no:hover {
    background: rgba(107, 114, 128, 0.15);
  }
  .reaction-btn--no.active {
    background: var(--reaction-no, #6b7280);
    color: #fff;
  }

  /* Poster cards: white button text */
  .card--has-poster .reaction-btn--yes {
    color: #4ade80;
    border-color: #4ade80;
  }
  .card--has-poster .reaction-btn--maybe {
    color: #fbbf24;
    border-color: #fbbf24;
  }
  .card--has-poster .reaction-btn--no {
    color: #9ca3af;
    border-color: #9ca3af;
  }
</style>
