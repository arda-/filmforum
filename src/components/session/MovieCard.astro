---
import type { UniqueMovie, MovieReaction } from '../../types/session';
import { toTitleCase, formatRuntime } from '../../utils/movieUtils';

interface Props {
  uniqueMovie: UniqueMovie;
  reaction?: MovieReaction;
  showActors?: boolean;
  showBlurb?: boolean;
  showImage?: boolean;
}

const {
  uniqueMovie,
  reaction = 'none',
  showActors = true,
  showBlurb = false,
  showImage = true,
} = Astro.props;
const { movie, id } = uniqueMovie;
const title = toTitleCase(movie.Movie);
const meta = [movie.director, movie.year, formatRuntime(movie.runtime)].filter(Boolean).join(' Â· ');
const hasPoster = showImage && !!movie.poster_url;
---

<div
  class:list={['card', { 'card--has-poster': hasPoster, [`card--${reaction}`]: reaction !== 'none' }]}
  data-movie-id={id}
  data-reaction={reaction}
  style={hasPoster ? `--poster-url: url(${movie.poster_url})` : undefined}
>
  {hasPoster && (
    <div class="card-poster">
      <img src={movie.poster_url} alt={title} loading="lazy" />
    </div>
  )}

  <div class="card-body">
    <div class="card-header">
      <h3 class="card-title">{title}</h3>
      <button class="card-info-btn" data-action="more-info" data-movie-id={id} aria-label={`More info about ${title}`}>
        <svg width="16" height="16" viewBox="0 0 16 16" fill="none">
          <circle cx="8" cy="8" r="7" stroke="currentColor" stroke-width="1.5"/>
          <path d="M8 7v4M8 5.5v-.01" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"/>
        </svg>
      </button>
    </div>
    <p class="card-meta">{meta}</p>
    {showActors && movie.actors && <p class="card-actors">{movie.actors}</p>}
    {showBlurb && movie.description && <p class="card-blurb">{movie.description}</p>}

    <div class="card-reactions" data-movie-id={id}>
      <button
        class:list={['reaction-btn', 'reaction-btn--yes', { active: reaction === 'yes' }]}
        data-reaction="yes"
        data-movie-id={id}
        aria-pressed={reaction === 'yes'}
        aria-label="Want to see"
        title="Want to see"
      >Yes</button>
      <button
        class:list={['reaction-btn', 'reaction-btn--maybe', { active: reaction === 'maybe' }]}
        data-reaction="maybe"
        data-movie-id={id}
        aria-pressed={reaction === 'maybe'}
        aria-label="Maybe"
        title="Maybe"
      >Maybe</button>
      <button
        class:list={['reaction-btn', 'reaction-btn--no', { active: reaction === 'no' }]}
        data-reaction="no"
        data-movie-id={id}
        aria-pressed={reaction === 'no'}
        aria-label="No"
        title="Pass"
      >No</button>
    </div>
  </div>
</div>

<style>
  .card {
    display: flex;
    flex-direction: column;
    border-radius: 12px;
    background: var(--bg-movie);
    overflow: hidden;
    transition: background-color 0.15s, box-shadow 0.25s;
  }

  .card:hover {
    background: var(--bg-movie-hover);
  }

  /* Reaction state glow */
  .card--yes {
    box-shadow: 0 0 0 2px var(--reaction-yes, #22c55e), 0 2px 8px rgba(34, 197, 94, 0.15);
  }
  .card--maybe {
    box-shadow: 0 0 0 2px var(--reaction-maybe, #f59e0b), 0 2px 8px rgba(245, 158, 11, 0.15);
  }
  .card--no {
    box-shadow: 0 0 0 2px var(--reaction-no, #6b7280), 0 2px 8px rgba(107, 114, 128, 0.1);
    opacity: 0.65;
  }

  .card-poster {
    width: 100%;
    aspect-ratio: 16 / 10;
    overflow: hidden;
    background: var(--bg-day);
    position: relative;
  }

  .card-poster img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  /* Blur fade on poster bottom */
  .card-poster::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 40%;
    background: linear-gradient(to top, var(--bg-movie) 0%, transparent 100%);
    pointer-events: none;
  }

  .card-body {
    display: flex;
    flex-direction: column;
    gap: 4px;
    padding: 12px;
  }

  .card--has-poster .card-body {
    padding-top: 4px;
  }

  .card-header {
    display: flex;
    align-items: flex-start;
    gap: 6px;
  }

  .card-title {
    flex: 1;
    font-size: 15px;
    font-weight: 600;
    color: var(--text-primary);
    margin: 0;
    line-height: 1.3;
  }

  .card-info-btn {
    flex-shrink: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 24px;
    height: 24px;
    padding: 0;
    background: transparent;
    border: none;
    color: var(--text-tertiary);
    cursor: pointer;
    border-radius: 4px;
    transition: color 0.15s, background 0.15s;
  }

  .card-info-btn:hover {
    color: var(--accent);
    background: var(--bg-movie);
  }

  .card-meta {
    font-size: 12px;
    color: var(--text-secondary);
    margin: 0;
  }

  .card-actors {
    font-size: 11px;
    color: var(--text-tertiary);
    margin: 0;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  .card-blurb {
    font-size: 11px;
    color: var(--text-secondary);
    margin: 4px 0 0 0;
    line-height: 1.4;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .card-reactions {
    display: flex;
    gap: 4px;
    margin-top: 8px;
  }

  /* Reaction buttons */
  .reaction-btn {
    flex: 1;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 6px 0;
    font-size: 12px;
    font-weight: 500;
    font-family: inherit;
    border-radius: 6px;
    border: 1.5px solid transparent;
    background: transparent;
    cursor: pointer;
    transition: all 0.15s ease;
    user-select: none;
  }

  .reaction-btn:active {
    transform: scale(0.93);
  }

  .reaction-btn--yes {
    color: var(--reaction-yes, #22c55e);
    border-color: var(--reaction-yes, #22c55e);
  }
  .reaction-btn--yes:hover {
    background: rgba(34, 197, 94, 0.1);
  }
  .reaction-btn--yes.active {
    background: var(--reaction-yes, #22c55e);
    color: #fff;
  }

  .reaction-btn--maybe {
    color: var(--reaction-maybe, #f59e0b);
    border-color: var(--reaction-maybe, #f59e0b);
  }
  .reaction-btn--maybe:hover {
    background: rgba(245, 158, 11, 0.1);
  }
  .reaction-btn--maybe.active {
    background: var(--reaction-maybe, #f59e0b);
    color: #fff;
  }

  .reaction-btn--no {
    color: var(--reaction-no, #6b7280);
    border-color: var(--reaction-no, #6b7280);
  }
  .reaction-btn--no:hover {
    background: rgba(107, 114, 128, 0.1);
  }
  .reaction-btn--no.active {
    background: var(--reaction-no, #6b7280);
    color: #fff;
  }
</style>
