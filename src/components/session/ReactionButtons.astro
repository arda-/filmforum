---
/**
 * Standalone reaction button group.
 * Uses radio inputs for proper semantics and browser-native behavior.
 * Labels are styled to look like buttons.
 */
import type { MovieReaction } from '../../types/session';

interface Props {
  movieId: string;
  reaction?: MovieReaction;
  size?: 'sm' | 'md';
}

const { movieId, reaction = 'none', size = 'md' } = Astro.props;
const groupName = `reaction-${movieId}`;
const noneId = `none-${movieId}`;
const yesId = `yes-${movieId}`;
const maybeId = `maybe-${movieId}`;
const noId = `no-${movieId}`;
---

<div class:list={['reactions', `reactions--${size}`]} data-movie-id={movieId} data-reaction-group>
  <!-- Hidden "none" radio for deselection support -->
  <input
    type="radio"
    name={groupName}
    value=""
    id={noneId}
    checked={reaction === 'none'}
    data-reaction="none"
  >

  <!-- Yes -->
  <input
    type="radio"
    name={groupName}
    value="yes"
    id={yesId}
    checked={reaction === 'yes'}
    data-reaction="yes"
    data-movie-id={movieId}
  >
  <label for={yesId} class="rbtn rbtn--yes" aria-label="Yes">
    <svg width="16" height="16" viewBox="0 0 16 16" fill="none">
      <path d="M13.5 4.5l-7 7L3 8" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
    </svg>
    <span>Yes</span>
  </label>

  <!-- Maybe -->
  <input
    type="radio"
    name={groupName}
    value="maybe"
    id={maybeId}
    checked={reaction === 'maybe'}
    data-reaction="maybe"
    data-movie-id={movieId}
  >
  <label for={maybeId} class="rbtn rbtn--maybe" aria-label="Maybe">
    <svg width="16" height="16" viewBox="0 0 16 16" fill="none">
      <circle cx="8" cy="11.5" r="1" fill="currentColor"/>
      <path d="M6 6a2 2 0 114 0c0 1-1.5 1.5-2 2.5" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"/>
    </svg>
    <span>Maybe</span>
  </label>

  <!-- No -->
  <input
    type="radio"
    name={groupName}
    value="no"
    id={noId}
    checked={reaction === 'no'}
    data-reaction="no"
    data-movie-id={movieId}
  >
  <label for={noId} class="rbtn rbtn--no" aria-label="No">
    <svg width="16" height="16" viewBox="0 0 16 16" fill="none">
      <path d="M4 4l8 8M12 4l-8 8" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
    </svg>
    <span>No</span>
  </label>
</div>

<script>
  /**
   * Deselection support: clicking an active button deselects it.
   * Browser handles mutual exclusivity and keyboard navigation automatically.
   */
  document.addEventListener('click', (e) => {
    const label = e.target.closest('[data-reaction-group] .rbtn');
    if (!label) return;

    const inputId = label.getAttribute('for');
    const input = document.getElementById(inputId) as HTMLInputElement;

    // If clicking already-checked radio, select the hidden "none" radio instead
    if (input?.checked) {
      const group = label.closest('[data-reaction-group]');
      const noneRadio = group?.querySelector('input[value=""]') as HTMLInputElement;
      if (noneRadio) {
        noneRadio.checked = true;
      }
    }
  });
</script>

<style>
  .reactions {
    display: flex;
    gap: 6px;
  }

  /* Hide radio inputs visually but keep them accessible */
  .reactions input[type="radio"] {
    position: absolute;
    opacity: 0;
    pointer-events: none;
  }

  /* Style labels as buttons (same visual appearance as before) */
  .rbtn {
    flex: 1;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 6px;
    font-family: inherit;
    font-weight: 500;
    border-radius: 8px;
    border: 1.5px solid transparent;
    background: transparent;
    cursor: pointer;
    transition: all 0.15s ease;
    user-select: none;
  }

  .rbtn:active {
    transform: scale(0.95);
  }

  /* Focus visible on the label when radio is focused */
  .reactions input[type="radio"]:focus-visible + .rbtn {
    outline: 2px solid var(--accent);
    outline-offset: 2px;
  }

  /* Sizes */
  .reactions--md .rbtn {
    padding: 10px 14px;
    font-size: 14px;
  }

  .reactions--sm .rbtn {
    padding: 6px 10px;
    font-size: 12px;
  }

  .reactions--sm .rbtn svg {
    width: 14px;
    height: 14px;
  }

  /* Yes - default state */
  .rbtn--yes {
    color: var(--reaction-yes, #22c55e);
    border-color: var(--reaction-yes, #22c55e);
  }

  /* Yes - checked state */
  input[type="radio"]:checked + .rbtn--yes {
    background: var(--reaction-yes, #22c55e);
    color: #fff;
  }

  /* Maybe - default state */
  .rbtn--maybe {
    color: var(--reaction-maybe, #f59e0b);
    border-color: var(--reaction-maybe, #f59e0b);
  }

  /* Maybe - checked state */
  input[type="radio"]:checked + .rbtn--maybe {
    background: var(--reaction-maybe, #f59e0b);
    color: #fff;
  }

  /* No - default state */
  .rbtn--no {
    color: var(--reaction-no, #ef4444);
    border-color: var(--reaction-no, #ef4444);
  }

  /* No - checked state */
  input[type="radio"]:checked + .rbtn--no {
    background: var(--reaction-no, #ef4444);
    color: #fff;
  }

  /* Hover states */
  @media (hover: hover) {
    .rbtn--yes:hover {
      background: rgba(34, 197, 94, 0.1);
    }
    .rbtn--maybe:hover {
      background: rgba(245, 158, 11, 0.1);
    }
    .rbtn--no:hover {
      background: rgba(239, 68, 68, 0.1);
    }
  }
</style>
