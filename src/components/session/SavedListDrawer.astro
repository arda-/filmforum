---
/**
 * Saved list drawer showing the user's Yes and Maybe selections.
 * Opens via bottom toolbar "Review Saved" button.
 */
import Drawer from '../Drawer.astro';

interface Props {
  sessionId: string;
}

const { sessionId } = Astro.props;
---

<Drawer id="saved-list-drawer" title="Your Saved Movies" maxHeight="85vh">
  <div class="saved-list" data-session-id={sessionId}>
    <div class="saved-section" id="saved-yes-section">
      <h3 class="saved-section-title">
        <span class="saved-dot saved-dot--yes"></span>
        Want to see
        <span class="saved-section-count" id="saved-yes-count">0</span>
      </h3>
      <div class="saved-items" id="saved-yes-items">
        <!-- Populated via JS -->
      </div>
    </div>

    <div class="saved-section" id="saved-maybe-section">
      <h3 class="saved-section-title">
        <span class="saved-dot saved-dot--maybe"></span>
        Maybe
        <span class="saved-section-count" id="saved-maybe-count">0</span>
      </h3>
      <div class="saved-items" id="saved-maybe-items">
        <!-- Populated via JS -->
      </div>
    </div>

    <div class="saved-empty" id="saved-empty">
      <div class="saved-empty-icon">
        <svg width="40" height="40" viewBox="0 0 40 40" fill="none">
          <path d="M10 6a4 4 0 00-4 4v24l14-8 14 8V10a4 4 0 00-4-4H10z" stroke="currentColor" stroke-width="2" fill="none"/>
        </svg>
      </div>
      <p class="saved-empty-title">No movies saved yet</p>
      <p class="saved-empty-hint">Tap "Yes" or "Maybe" on any movie to start building your list</p>
    </div>

    <div class="saved-actions" id="saved-actions">
      <button class="saved-share-btn" id="saved-share-btn" disabled>
        <svg width="16" height="16" viewBox="0 0 16 16" fill="none">
          <path d="M4 10v2a2 2 0 002 2h4a2 2 0 002-2v-2M8 2v8M5 5l3-3 3 3" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
        Share List
      </button>
    </div>
  </div>
</Drawer>

<style>
  .saved-list {
    display: flex;
    flex-direction: column;
    gap: 16px;
  }

  .saved-section {
    display: none;
  }

  .saved-section.has-items {
    display: block;
  }

  .saved-section-title {
    display: flex;
    align-items: center;
    gap: 8px;
    font-size: 14px;
    font-weight: 600;
    color: var(--text-primary);
    margin: 0 0 8px 0;
  }

  .saved-dot {
    width: 8px;
    height: 8px;
    border-radius: 50%;
  }

  .saved-dot--yes {
    background: var(--reaction-yes, #22c55e);
  }

  .saved-dot--maybe {
    background: var(--reaction-maybe, #f59e0b);
  }

  .saved-section-count {
    font-size: 12px;
    font-weight: 500;
    color: var(--text-tertiary);
  }

  .saved-items {
    display: flex;
    flex-direction: column;
    gap: 4px;
  }

  /* Saved item (created via JS) */
  .saved-list :global(.saved-item) {
    display: flex;
    align-items: center;
    gap: 10px;
    padding: 10px 12px;
    background: var(--bg-movie);
    border-radius: 8px;
    transition: background-color 0.15s;
  }

  .saved-list :global(.saved-item:hover) {
    background: var(--bg-movie-hover);
  }

  .saved-list :global(.saved-item-info) {
    flex: 1;
    min-width: 0;
  }

  .saved-list :global(.saved-item-title) {
    font-size: 14px;
    font-weight: 500;
    color: var(--text-primary);
    margin: 0;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  .saved-list :global(.saved-item-meta) {
    font-size: 12px;
    color: var(--text-secondary);
    margin: 2px 0 0 0;
  }

  .saved-list :global(.saved-item-actions) {
    display: flex;
    gap: 4px;
    flex-shrink: 0;
  }

  .saved-list :global(.saved-item-btn) {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 30px;
    height: 30px;
    padding: 0;
    background: transparent;
    border: 1px solid var(--bg-movie-hover);
    border-radius: 6px;
    color: var(--text-tertiary);
    cursor: pointer;
    transition: all 0.15s;
  }

  .saved-list :global(.saved-item-btn:hover) {
    background: var(--bg-movie);
    color: var(--text-primary);
  }

  .saved-list :global(.saved-item-btn--move) {
    font-size: 14px;
    font-weight: 600;
    border-color: transparent;
  }

  .saved-list :global(.saved-item-btn--move:hover) {
    color: var(--accent);
    background: rgba(6, 182, 212, 0.1);
  }

  .saved-list :global(.saved-item-btn--remove) {
    border-color: transparent;
  }

  .saved-list :global(.saved-item-btn--remove:hover) {
    color: #ef4444;
    background: rgba(239, 68, 68, 0.1);
  }

  /* Empty state */
  .saved-empty {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    padding: 40px 20px;
    gap: 8px;
  }

  .saved-empty.hidden {
    display: none;
  }

  .saved-empty-icon {
    color: var(--text-tertiary);
    opacity: 0.5;
    margin-bottom: 4px;
  }

  .saved-empty-title {
    font-size: 16px;
    font-weight: 600;
    color: var(--text-primary);
    margin: 0;
  }

  .saved-empty-hint {
    font-size: 13px;
    color: var(--text-secondary);
    margin: 0;
    max-width: 260px;
  }

  /* Actions */
  .saved-actions {
    display: none;
    padding-top: 8px;
    border-top: 1px solid var(--bg-movie);
  }

  .saved-actions.has-items {
    display: block;
  }

  .saved-share-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 6px;
    width: 100%;
    padding: 10px 16px;
    font-size: 14px;
    font-weight: 500;
    font-family: inherit;
    background: var(--bg-movie);
    color: var(--text-secondary);
    border: none;
    border-radius: 8px;
    cursor: pointer;
    transition: all 0.15s;
  }

  .saved-share-btn:hover:not(:disabled) {
    background: var(--bg-movie-hover);
    color: var(--text-primary);
  }

  .saved-share-btn:disabled {
    opacity: 0.5;
    cursor: not-allowed;
  }
</style>
