---
/**
 * Checkbox styled as a button (like saved movies checkboxes)
 */
interface Props {
  id: string;
  label: string;
  checked?: boolean;
}

const { id, label, checked = false } = Astro.props;
---

<label class="checkbox-button">
  <input type="checkbox" id={id} checked={checked} />
  <span class="checkbox-indicator">
    <svg viewBox="0 0 12 12" fill="none">
      <path d="M2.5 6l2.5 2.5 4.5-5" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
    </svg>
  </span>
  <span>{label}</span>
</label>

<style>
  .checkbox-button {
    display: flex;
    align-items: center;
    gap: 5px;
    padding: 6px 10px;
    font-size: 13px;
    color: var(--text-secondary);
    cursor: pointer;
    background: transparent;
    border-right: 1px solid var(--bg-movie-hover);
    transition: background-color 0.15s ease, color 0.15s ease;
    user-select: none;
    -webkit-user-select: none;
  }

  .checkbox-button:last-child {
    border-right: none;
  }

  .checkbox-button:hover {
    background: var(--bg-movie);
    color: var(--text-primary);
  }

  .checkbox-button:has(input:checked) {
    background: var(--bg-movie);
    color: var(--text-primary);
  }

  .checkbox-button:has(input:checked):hover {
    background: var(--bg-movie-hover);
  }

  .checkbox-button input {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border: 0;
  }

  .checkbox-indicator {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 14px;
    height: 14px;
    border-radius: 3px;
    border: 1.5px solid var(--text-tertiary);
    transition: all 0.15s ease;
    flex-shrink: 0;
  }

  .checkbox-indicator svg {
    width: 10px;
    height: 10px;
    opacity: 0;
    transition: opacity 0.15s ease;
  }

  .checkbox-button:has(input:checked) .checkbox-indicator {
    background: var(--accent);
    border-color: var(--accent);
    color: #fff;
  }

  .checkbox-button:has(input:checked) .checkbox-indicator svg {
    opacity: 1;
  }

  .checkbox-button span:last-child {
    white-space: nowrap;
  }
</style>
