---
interface Props {
  current?: string;
}

const { current } = Astro.props;
---

<nav class="demo-nav">
  <select class="demo-select" onchange="if(this.value) window.location.href = this.value">
    <option value="">Select Demo...</option>
    <option value="/demo/apple-card/1a" selected={current === '1a'}>1A: Desktop</option>
    <option value="/demo/apple-card/1b" selected={current === '1b'}>1B: Mobile 16px</option>
    <option value="/demo/apple-card/1c" selected={current === '1c'}>1C: Mobile 24px</option>
    <option value="/demo/apple-card/1d" selected={current === '1d'}>1D: Responsive</option>
    <option value="/demo/apple-card/2a" selected={current === '2a'}>2A: Desktop+Body</option>
    <option value="/demo/apple-card/2b" selected={current === '2b'}>2B: Floating Bottom</option>
    <option value="/demo/apple-card/2c" selected={current === '2c'}>2C: Scroll-Aware</option>
  </select>
</nav>

<style>
  .demo-nav {
    position: sticky;
    top: 0;
    z-index: 10;
    padding: 12px 16px;
    background: var(--bg-body);
    border-bottom: 1px solid var(--border-color);
  }

  .demo-select {
    width: 100%;
    padding: 8px 12px;
    font-size: 14px;
    font-weight: 500;
    color: var(--text-primary);
    background: var(--bg-movie);
    border: 1px solid var(--border-color);
    border-radius: 6px;
    cursor: pointer;
  }

  .demo-select:focus {
    outline: 2px solid var(--accent);
    outline-offset: 2px;
  }
</style>
