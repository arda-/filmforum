---
interface Props {
  scroll?: boolean;
  class?: string;
}

const { scroll = false, class: className } = Astro.props;
---

<div class:list={['dialog-body', { 'dialog-body--scroll': scroll }, className]}>
  <slot />
</div>

<style>
  .dialog-body {
    font-size: 14px;
    color: var(--text-secondary);
    line-height: 1.6;
  }

  .dialog-body--scroll {
    max-height: 60dvh;
    overflow-y: auto;
    overscroll-behavior: contain;
    margin: 0 -24px;
    padding: 0 24px;
  }

  @media (max-width: 480px) {
    .dialog-body--scroll {
      max-height: 55dvh;
      margin: 0 -20px;
      padding: 0 20px;
    }
  }
</style>
