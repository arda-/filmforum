---
interface Props {
  id: string;
  size?: 'sm' | 'md' | 'lg';
  showCloseButton?: boolean;
  dismissable?: boolean;
}

const {
  id,
  size = 'sm',
  showCloseButton = true,
  dismissable = true
} = Astro.props;
---

<div id={id} class="dialog" data-open="false" role="dialog" aria-modal="true" data-size={size} data-show-close={showCloseButton} data-dismissable={dismissable}>
  <div class="dialog-backdrop" data-dialog-close></div>
  <div class:list={['dialog-content', `dialog-content--${size}`]}>
    <slot />
    {showCloseButton && (
      <button class="dialog-close" data-dialog-close aria-label="Close">
        <svg width="15" height="15" viewBox="0 0 15 15" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M11.7816 4.03157C12.0062 3.80702 12.0062 3.44295 11.7816 3.2184C11.5571 2.99385 11.193 2.99385 10.9685 3.2184L7.50005 6.68682L4.03164 3.2184C3.80708 2.99385 3.44301 2.99385 3.21846 3.2184C2.99391 3.44295 2.99391 3.80702 3.21846 4.03157L6.68688 7.49999L3.21846 10.9684C2.99391 11.193 2.99391 11.557 3.21846 11.7816C3.44301 12.0061 3.80708 12.0061 4.03164 11.7816L7.50005 8.31316L10.9685 11.7816C11.193 12.0061 11.5571 12.0061 11.7816 11.7816C12.0062 11.557 12.0062 11.193 11.7816 10.9684L8.31322 7.49999L11.7816 4.03157Z" fill="currentColor" fill-rule="evenodd" clip-rule="evenodd"></path>
        </svg>
      </button>
    )}
  </div>
</div>

<script>
  // Initialize all dialogs
  document.querySelectorAll('.dialog').forEach(dialog => {
    const closeElements = dialog.querySelectorAll('[data-dialog-close]');
    const isDismissable = dialog.dataset.dismissable !== 'false';

    // Close on backdrop/button click
    closeElements.forEach(el => {
      el.addEventListener('click', (e) => {
        // For backdrop, only close if clicking directly on it (not dialog content) AND dialog is dismissable
        // For close button, always close regardless of which child element was clicked
        const isBackdrop = el.classList.contains('dialog-backdrop');
        if ((!isBackdrop || e.target === el) && (!isBackdrop || isDismissable)) {
          (dialog as HTMLElement).dataset.open = 'false';
          document.body.style.overflow = '';
        }
      });
    });

    // Close on Escape (only if dismissable)
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape' && (dialog as HTMLElement).dataset.open === 'true' && isDismissable) {
        (dialog as HTMLElement).dataset.open = 'false';
        document.body.style.overflow = '';
      }
    });
  });

  // Global dialog API
  (window as any).openDialog = (id: string) => {
    const dialog = document.getElementById(id);
    if (dialog) {
      dialog.dataset.open = 'true';
      document.body.style.overflow = 'hidden';
      // Focus first focusable element
      const focusable = dialog.querySelector('button, [href], input, select, textarea, [tabindex]:not([tabindex="-1"])') as HTMLElement;
      focusable?.focus();
    }
  };

  (window as any).closeDialog = (id: string) => {
    const dialog = document.getElementById(id);
    if (dialog) {
      dialog.dataset.open = 'false';
      document.body.style.overflow = '';
    }
  };
</script>

<style>
  .dialog {
    display: none;
    position: fixed;
    inset: 0;
    z-index: 1000;
    align-items: center;
    justify-content: center;
  }

  .dialog[data-open="true"] {
    display: flex;
  }

  .dialog-backdrop {
    position: absolute;
    inset: 0;
    background: rgba(0, 0, 0, 0.5);
    animation: backdrop-in 0.15s ease-out;
  }

  .dialog[data-open="true"] .dialog-content {
    animation: content-in 0.2s ease-out;
  }

  @keyframes backdrop-in {
    from { opacity: 0; }
    to { opacity: 1; }
  }

  @keyframes content-in {
    from {
      opacity: 0;
      transform: scale(0.95) translateY(-10px);
    }
    to {
      opacity: 1;
      transform: scale(1) translateY(0);
    }
  }

  .dialog-content {
    position: relative;
    background: var(--bg-day);
    border-radius: 12px;
    padding: 24px;
    margin: 16px;
    max-height: calc(100dvh - 32px);
    overflow-y: auto;
    box-shadow:
      0 10px 25px rgba(0, 0, 0, 0.2),
      0 0 0 1px rgba(255, 255, 255, 0.05);
  }

  .dialog-content--sm {
    width: 100%;
    max-width: 400px;
  }

  .dialog-content--md {
    width: 100%;
    max-width: 500px;
  }

  .dialog-content--lg {
    width: 100%;
    max-width: 640px;
  }

  .dialog-close {
    position: absolute;
    top: 16px;
    right: 16px;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 28px;
    height: 28px;
    padding: 0;
    background: transparent;
    border: none;
    border-radius: 6px;
    color: var(--text-tertiary);
    cursor: pointer;
    transition: background-color 0.15s, color 0.15s;
  }

  .dialog-close:hover {
    background: var(--bg-movie);
    color: var(--text-primary);
  }

  .dialog-close:active {
    background: var(--bg-movie-hover);
  }

  /* Mobile responsive styles */
  @media (max-width: 480px) {
    .dialog-content {
      margin: 8px;
      padding: 20px;
      border-radius: 10px;
      max-height: calc(100dvh - 16px);
    }

    .dialog-content--sm,
    .dialog-content--md,
    .dialog-content--lg {
      max-width: calc(100dvw - 16px);
    }

    .dialog-close {
      top: 12px;
      right: 12px;
    }
  }
</style>
