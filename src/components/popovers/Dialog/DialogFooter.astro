---
interface Props {
  sticky?: boolean;
  align?: 'end' | 'center' | 'start';
}

const { sticky = false, align = 'end' } = Astro.props;
---

<div class:list={['dialog-footer', { 'dialog-footer--sticky': sticky, 'dialog-footer--center': align === 'center', 'dialog-footer--start': align === 'start' }]}>
  <slot />
</div>

<style>
  .dialog-footer {
    flex-shrink: 0;
    display: flex;
    gap: 12px;
    justify-content: flex-end;
    padding: 16px 0 0 0;
  }

  .dialog-footer--center {
    justify-content: center;
  }

  .dialog-footer--start {
    justify-content: flex-start;
  }

  .dialog-footer--sticky {
    position: sticky;
    bottom: 0;
    margin: 0 -24px -24px -24px;
    padding: 16px 24px;
    background: var(--bg-day);
    border-top: 1px solid var(--bg-movie);
    border-radius: 0 0 12px 12px;
  }

  @media (max-width: 480px) {
    .dialog-footer {
      gap: 8px;
    }

    .dialog-footer--sticky {
      margin: 0 -20px -20px -20px;
      padding: 12px 20px;
      border-radius: 0 0 10px 10px;
    }
  }
</style>
