---
import Icon from './Icon.astro';

interface ToggleOption {
  label: string;
  value: string;
  checked?: boolean;
  icon?: string;
}

interface Props {
  label: string;
  name: string;
  options: ToggleOption[];
  statusId?: string;
  size?: 'sm' | 'default' | 'lg';
}

const { label, name, options, statusId, size = 'default' } = Astro.props;
---

<div class="toggle-group-container">
  <span class="toggle-group-label">{label}</span>
  <div class="toggle-group">
    {options.map(option => (
      <label class:list={['toggle-item', `toggle-item--${size}`]}>
        <input type="radio" name={name} value={option.value} {...(option.checked && { checked: true })} />
        {option.icon && <Icon name={option.icon} size={16} />}
        <span>{option.label}</span>
      </label>
    ))}
  </div>
  {statusId && <span id={statusId} class="toggle-status"></span>}
</div>

<style>
  .toggle-group-container {
    display: flex;
    align-items: center;
    gap: 8px;
    flex-wrap: wrap;
  }

  .toggle-group-label {
    font-size: 14px;
    color: var(--text-secondary);
  }

  .toggle-group {
    display: inline-flex;
    border: 1px solid var(--bg-movie-hover);
    border-radius: 6px;
    overflow: hidden;
    background: transparent;
  }

  .toggle-item {
    display: flex;
    align-items: center;
    padding: 6px 12px;
    font-size: 13px;
    color: var(--text-secondary);
    cursor: pointer;
    background: transparent;
    border-right: 1px solid var(--bg-movie-hover);
    transition:
      background-color 0.15s ease,
      color 0.15s ease,
      box-shadow 0.1s ease;
  }

  .toggle-item:last-child {
    border-right: none;
  }

  .toggle-item:hover {
    background: var(--bg-movie);
    color: var(--text-primary);
  }

  .toggle-item:active {
    box-shadow: inset 0 1px 2px rgba(0, 0, 0, 0.1);
  }

  .toggle-item:has(input:checked) {
    background: var(--bg-movie);
    color: var(--text-primary);
  }

  .toggle-item:has(input:checked):hover {
    background: var(--bg-movie-hover);
  }

  .toggle-item input {
    position: absolute;
    opacity: 0;
    pointer-events: none;
  }

  .toggle-item span {
    white-space: nowrap;
  }

  .toggle-item :global(svg) {
    margin-right: 6px;
  }

  .toggle-status {
    font-size: 12px;
    color: var(--text-tertiary);
    cursor: pointer;
    text-decoration: underline;
    text-decoration-style: dotted;
    text-underline-offset: 2px;
    display: none;
  }

  .toggle-status:not(:empty) {
    display: inline;
  }

  .toggle-status:hover {
    color: var(--accent);
  }

  /* Size variants */
  .toggle-item--sm {
    padding: 4px 8px;
    font-size: 11px;
  }

  .toggle-item--default {
    padding: 6px 12px;
    font-size: 13px;
  }

  .toggle-item--lg {
    padding: 8px 16px;
    font-size: 14px;
  }
</style>
