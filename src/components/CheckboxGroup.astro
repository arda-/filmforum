---
interface CheckboxOption {
  label: string;
  value: string;
  checked?: boolean;
  color?: string;
}

interface Props {
  label: string;
  name: string;
  options: CheckboxOption[];
  statusId?: string;
}

const { label, name, options, statusId } = Astro.props;
---

<div class="checkbox-group-container">
  <span class="checkbox-group-label">{label}</span>
  <div class="checkbox-group">
    {options.map(option => (
      <label class="checkbox-item" style={option.color ? `--checkbox-color: ${option.color}` : undefined}>
        <input type="checkbox" name={name} value={option.value} {...(option.checked && { checked: true })} />
        <span class="checkbox-indicator">
          <svg viewBox="0 0 12 12" fill="none">
            <path d="M2.5 6l2.5 2.5 4.5-5" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </span>
        <span>{option.label}</span>
      </label>
    ))}
  </div>
  {statusId && <span id={statusId} class="checkbox-status"></span>}
</div>

<style>
  .checkbox-group-container {
    display: flex;
    align-items: center;
    gap: 8px;
    flex-wrap: wrap;
  }

  .checkbox-group-label {
    font-size: 14px;
    color: var(--text-secondary);
  }

  .checkbox-group {
    display: inline-flex;
    border: 1px solid var(--bg-movie-hover);
    border-radius: 6px;
    overflow: hidden;
    background: transparent;
  }

  .checkbox-item {
    display: flex;
    align-items: center;
    gap: 5px;
    padding: 6px 10px;
    font-size: 13px;
    color: var(--text-secondary);
    cursor: pointer;
    background: transparent;
    border-right: 1px solid var(--bg-movie-hover);
    transition:
      background-color 0.15s ease,
      color 0.15s ease;
  }

  .checkbox-item:last-child {
    border-right: none;
  }

  .checkbox-item:hover {
    background: var(--bg-movie);
    color: var(--text-primary);
  }

  .checkbox-item:has(input:checked) {
    background: var(--bg-movie);
    color: var(--checkbox-color, var(--text-primary));
  }

  .checkbox-item:has(input:checked):hover {
    background: var(--bg-movie-hover);
  }

  .checkbox-item input {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border: 0;
  }

  .checkbox-indicator {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 14px;
    height: 14px;
    border-radius: 3px;
    border: 1.5px solid var(--text-tertiary);
    transition: all 0.15s ease;
    flex-shrink: 0;
  }

  .checkbox-indicator svg {
    width: 10px;
    height: 10px;
    opacity: 0;
    transition: opacity 0.15s ease;
  }

  .checkbox-item:has(input:checked) .checkbox-indicator {
    background: var(--checkbox-color, var(--accent));
    border-color: var(--checkbox-color, var(--accent));
    color: #fff;
  }

  .checkbox-item:has(input:checked) .checkbox-indicator svg {
    opacity: 1;
  }

  .checkbox-item span:last-child {
    white-space: nowrap;
  }

  .checkbox-status {
    font-size: 12px;
    color: var(--text-tertiary);
    display: none;
  }

  .checkbox-status:not(:empty) {
    display: inline;
  }
</style>
