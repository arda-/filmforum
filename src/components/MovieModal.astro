---
import { DialogRoot } from './Dialog/index';
import Button from './Button.astro';

// Pre-generate thumbnail list at build time
import fs from 'node:fs';
import path from 'node:path';

// Get all available poster thumbnails
const thumbDir = path.join(process.cwd(), 'public/posters-thumb');
const hasThumbnails = fs.existsSync(thumbDir);
---

<DialogRoot id="movie-modal" size="md">
  <div class="movie-modal-inner">
    <div class="movie-poster">
      <!-- Thumbnail loads immediately while full quality loads in background -->
      {hasThumbnails && (
        <img id="modal-poster-thumb" src="" alt="" loading="lazy" decoding="async" width="640" height="360" style="position:absolute;top:0;left:0;width:100%;height:100%;object-fit:cover;z-index:1;" />
      )}
      <img id="modal-poster" src="" alt="" loading="lazy" decoding="async" width="640" height="360" style="position:absolute;top:0;left:0;width:100%;height:100%;object-fit:cover;z-index:2;" />
      <span class="poster-placeholder">No Image Available</span>
    </div>

    <h2 class="modal-title" id="modal-title"></h2>
    <p class="modal-meta" id="modal-meta"></p>
    <p class="modal-actors" id="modal-actors"></p>
    <p class="modal-description" id="modal-description"></p>
    <p class="modal-citation">— Film Forum</p>

    <div class="movie-actions">
      <p class="ticket-disclaimer" id="modal-disclaimer"></p>
      <a href="#" id="modal-buy-tickets" class="action-link action-link--primary" target="_blank">
        Buy Tickets
      </a>
      <Button id="modal-add-calendar" variant="secondary">
        Add to Calendar
      </Button>
      <a href="#" id="modal-film-page" class="action-link action-link--secondary" target="_blank">
        View on Film Forum ↗
      </a>
    </div>
  </div>
</DialogRoot>

<style>
  .movie-modal-inner {
    display: flex;
    flex-direction: column;
    gap: 6px;
    padding-top: 28px;
  }

  .movie-poster {
    width: 100%;
    aspect-ratio: 4/3;
    background: var(--bg-movie);
    border-radius: 4px;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    position: relative;
  }

  .movie-poster img {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .poster-placeholder {
    color: var(--text-tertiary);
    font-size: 14px;
    position: relative;
    z-index: 10;
  }

  .modal-title {
    font-size: 1.5rem;
    font-weight: 600;
    color: var(--text-primary);
    margin: 8px 0 0 0;
    line-height: 1.2;
  }

  .modal-meta {
    font-size: 0.9rem;
    color: var(--text-secondary);
    margin: 0;
  }

  .modal-actors {
    font-size: 0.9rem;
    color: var(--text-tertiary);
    margin: 0;
    word-spacing: 0.05em;
  }

  .modal-description {
    font-size: 0.85rem;
    color: var(--text-secondary);
    line-height: 1.5;
    margin: 8px 0 0 0;
    padding-left: 1.5em;
    position: relative;
    font-style: italic;
  }

  .modal-description::before {
    content: '\201C';
    position: absolute;
    left: 0;
    top: -0.1em;
    font-size: 2em;
    font-family: Georgia, serif;
    color: var(--accent);
    line-height: 1;
    font-style: normal;
  }

  .modal-citation {
    font-size: 0.8rem;
    color: var(--text-tertiary);
    text-align: right;
    margin: -2px 0 4px 0;
    font-style: italic;
  }

  .movie-actions {
    display: flex;
    flex-direction: column;
    gap: 8px;
    margin-top: 12px;
  }

  .ticket-disclaimer {
    font-size: 0.85rem;
    color: var(--text-secondary);
    margin: 0 0 2px 0;
    line-height: 1.4;
    font-weight: 600;
    font-style: italic;
    text-align: center;
  }

  /* Action links styled to match Button component */
  .action-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    padding: 8px 14px;
    border-radius: 8px;
    font-size: 14px;
    font-weight: 500;
    text-align: center;
    text-decoration: none;
    cursor: pointer;
    transition: background-color 0.15s ease, transform 0.1s ease;
  }

  .action-link:active {
    transform: scale(0.97);
  }

  .action-link--primary {
    background-color: var(--accent);
    color: #fff;
  }

  .action-link--primary:hover {
    background-color: var(--accent-bg);
  }

  .action-link--secondary {
    background-color: var(--bg-movie);
    color: var(--text-secondary);
  }

  .action-link--secondary:hover {
    background-color: var(--bg-movie-hover);
    color: var(--text-primary);
  }

  /* Make Button component full-width in this context */
  .movie-actions :global(.btn) {
    width: 100%;
  }

  @media (max-width: 480px) {
    .modal-title {
      font-size: 1.25rem;
    }

    .modal-description {
      font-size: 0.8rem;
    }
  }
</style>
