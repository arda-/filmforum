---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">
  <title>{title}</title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=IBM+Plex+Sans:ital,wght@0,300;0,400;0,500;0,700;1,400&family=Barlow+Semi+Condensed:wght@300;400;500;600;700&family=Barlow+Condensed:wght@300;400&display=swap" rel="stylesheet">
</head>
<body class="monday-start">
  <slot />
</body>
</html>

<style is:global>
  @import '../styles/global.css';
  @import '../styles/calendar.css';
  @import '../components/MovieTile/styles.css';
</style>
